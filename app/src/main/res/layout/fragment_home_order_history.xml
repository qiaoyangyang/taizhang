<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/home_1F2333"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <com.angcyo.tablayout.DslTabLayout
        android:id="@+id/tab_layout"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        app:layout_constraintBottom_toTopOf="@id/tab_layout"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tab_deselect_color="@color/home_A8ABB2"
        app:tab_divider_margin_top="@dimen/dp_10"
        app:tab_draw_badge="true"
        app:tab_draw_indicator="true"
        app:tab_enable_gradient_scale="false"
        app:tab_enable_text_bold="true"
        app:tab_indicator_color="@color/red"
        app:tab_indicator_drawable="@drawable/indicator_bottom_line"
        app:tab_indicator_enable_flow="true"
        app:tab_indicator_height="@dimen/dp_5"
        app:tab_indicator_solid_color="@color/red"
        app:tab_indicator_style="STYLE_BOTTOM"
        app:tab_indicator_width="WRAP_CONTENT"
        app:tab_item_is_equ_width="false"
        app:tab_select_color="@color/white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginStart="@dimen/dp_10"
            android:paddingBottom="@dimen/dp_10"
            android:text="进行中"
            android:textColor="#ff9b9b9b"
            android:textSize="@dimen/sp_30" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_20"
            android:gravity="center"
            android:paddingStart="@dimen/dp_20"
            android:paddingBottom="@dimen/dp_10"
            android:text="进行中"
            android:textColor="#ff9b9b9b"
            android:textSize="@dimen/sp_30" />

    </com.angcyo.tablayout.DslTabLayout>

    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:src="@mipmap/ic_launcher"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/tab_layout"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tab_layout" />

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/view_pager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/dp_20"
        android:background="@color/home_B3B3B3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tab_layout" />
</androidx.constraintlayout.widget.ConstraintLayout>