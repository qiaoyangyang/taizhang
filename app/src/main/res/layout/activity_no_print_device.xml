<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">


    <com.hjq.bar.TitleBar
        android:visibility="gone"
        android:id="@+id/TitleBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:barStyle="transparent"
        app:layout_constraintTop_toTopOf="parent"
        app:leftIcon="@drawable/bar_arrows_left_white"
        app:rightBackground="@null"
        app:rightTitleSize="@dimen/sp_14"
        app:titleColor="@color/white"
        android:background="@color/red"
        app:title="选择打印机" />
    <androidx.constraintlayout.widget.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/noStoreLine"
        app:layout_constraintGuide_percent="0.5"
        />
    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginBottom="15dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:src="@mipmap/no_store_img"
        app:layout_constraintBottom_toTopOf="@+id/txtNoStoreTip"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="13sp"
        android:id="@+id/txtNoStoreTip"
        app:layout_constraintBottom_toTopOf="@+id/noStoreLine"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginBottom="15dp"
        android:text="未绑定云打印机"/>

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="添加设备"
        android:textColor="@color/white"
        android:paddingHorizontal="30dp"
        app:layout_constraintTop_toBottomOf="@+id/noStoreLine"
        android:background="@drawable/login_btn_selector"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:textSize="14sp"
        android:id="@+id/creatStoreBtn"/>

<!--    <androidx.compose.ui.platform.ComposeView-->
<!--        android:layout_width="wrap_content"-->
<!--        android:layout_height="wrap_content"-->
<!--        -->
<!--        />-->


</androidx.constraintlayout.widget.ConstraintLayout>