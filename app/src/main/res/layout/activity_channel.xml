<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/order_remark_F4F4F4">

    <com.hjq.bar.TitleBar


        android:id="@+id/TitleBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/red"
        app:layout_constraintTop_toTopOf="parent"
        app:leftIcon="@drawable/bar_arrows_left_white"
        app:lineVisible="false"
        app:rightTitleSize="@dimen/sp_36"
        app:title=""
        app:titleColor="@color/white" />


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rectangle1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingLeft="@dimen/dp_36"
        android:paddingRight="@dimen/dp_36"

        app:layout_constraintTop_toBottomOf="@+id/TitleBar" />

    <com.scwang.smart.refresh.layout.SmartRefreshLayout
        app:srlEnableLoadMore="false"
        android:id="@+id/refeshLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"

        android:layout_marginTop="10dp"
        app:layout_constraintBottom_toTopOf="@+id/tv_newly_built_store"
        app:layout_constraintTop_toBottomOf="@+id/rectangle1">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rectangle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_36"
            android:layout_marginTop="10dp"
            android:layout_marginRight="@dimen/dp_36"
            android:layout_marginBottom="@dimen/dp_10"
            app:layout_constraintTop_toBottomOf="@+id/rectangle1" />

    </com.scwang.smart.refresh.layout.SmartRefreshLayout>

    <com.hjq.shape.view.ShapeButton
        android:id="@+id/tv_newly_built_store"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="18dp"
        android:layout_marginRight="18dp"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:text="绑定新的店铺"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:shape_radius="10dp"
        app:shape_solidColor="#FF4C4A" />
</androidx.constraintlayout.widget.ConstraintLayout>