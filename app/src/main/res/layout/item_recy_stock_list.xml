<?xml version="1.0" encoding="utf-8"?>
<com.hjq.shape.layout.ShapeRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/dp_20"
    android:layout_marginRight="@dimen/dp_20"
    android:background="@color/white"
    app:shape_solidColor="@color/white"
    app:shape_radius="@dimen/dp_20">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_couponBuyPrice"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_40"
            android:layout_marginTop="@dimen/dp_40"
            android:text=""
            android:textColor="#FF4C4A"
            android:textSize="28sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <TextView
            app:layout_constraintBottom_toBottomOf="@+id/tv_y"
            android:id="@+id/tvxi"
            android:layout_marginLeft="@dimen/dp_30"
            android:background="#EEEEEE"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="@dimen/dp_40"
            app:layout_constraintLeft_toRightOf="@+id/tv_couponBuyPrice"
            android:layout_width="1dp"
            android:layout_height="0dp"/>
        <TextView
            android:ellipsize="end"
            android:maxLines="2"
            android:id="@+id/tv_dealTitle"
            android:textSize="@dimen/sp_32"
            android:textColor="@color/home_333333"
            android:layout_marginLeft="@dimen/dp_24"
            android:layout_marginRight="@dimen/dp_32"
            app:layout_constraintTop_toTopOf="@+id/tv_couponBuyPrice"
            android:text=""
            app:layout_constraintLeft_toRightOf="@+id/tvxi"

            app:layout_constraintRight_toRightOf="parent"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tv_couponCode"
            android:layout_marginTop="@dimen/dp_10"
            app:layout_constraintLeft_toLeftOf="@+id/tv_dealTitle"
            android:textColor="#999999"
            android:textSize="@dimen/sp_24"
            app:layout_constraintTop_toBottomOf="@+id/tv_dealTitle"
            app:layout_constraintRight_toRightOf="@+id/tv_dealTitle"
            android:layout_width="0dp"
            android:text=""
            android:layout_height="wrap_content"/>
        <TextView
            android:paddingBottom="@dimen/dp_20"
            android:id="@+id/tv_y"
            android:textSize="@dimen/sp_24"
            android:textColor="#666666"
            android:text=""
            app:layout_constraintLeft_toLeftOf="@+id/tv_couponBuyPrice"
            app:layout_constraintTop_toBottomOf="@+id/tv_couponBuyPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <View
            android:id="@+id/View_lin"
            android:layout_marginTop="@dimen/dp_40"
            app:layout_constraintTop_toBottomOf="@+id/tv_y"
            android:background="@drawable/bg_view_lin1"
            android:layout_width="match_parent"
            android:layout_height="3dp"/>
        <com.hjq.shape.view.ShapeTextView
            android:textSize="@dimen/sp_24"
            android:id="@+id/tv_status"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:paddingBottom="2dp"
            android:paddingTop="2dp"
            app:shape_radius="5dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="24dp"
            android:text=""
            android:layout_width="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/View_lin"
            android:layout_height="wrap_content"/>
        <TextView
            android:marqueeRepeatLimit="marquee_forever"
            android:id="@+id/tv_shopName"
            android:textColor="#999999"
            android:textSize="12sp"
            android:maxLines="1"
            android:layout_marginRight="16dp"
            android:layout_marginLeft="10dp"
            app:layout_constraintLeft_toRightOf="@+id/tv_status"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBaseline_toBaselineOf="@+id/tv_status"
            android:layout_width="0dp"
            android:text=""
            android:layout_height="wrap_content"/>


    </androidx.constraintlayout.widget.ConstraintLayout>

</com.hjq.shape.layout.ShapeRelativeLayout>