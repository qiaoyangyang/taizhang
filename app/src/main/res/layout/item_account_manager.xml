<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="@dimen/dp_20"
    android:layout_marginVertical="@dimen/dp_10"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_15"
        android:background="@drawable/home_order_bg"
        android:paddingVertical="@dimen/dp_30"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/img_msg_center_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/dp_20"
            android:layout_marginVertical="@dimen/dp_10"
            android:src="@mipmap/icon_head"
            app:layout_constraintBottom_toBottomOf="@+id/txt_account_role"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="@+id/txt_account_name" />

        <TextView
            android:id="@+id/txt_account_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_20"
            android:ellipsize="end"
            android:maxLength="7"
            android:singleLine="true"
            android:textColor="@color/home_333333"
            android:textSize="@dimen/sp_36"
            app:layout_constraintLeft_toRightOf="@+id/img_msg_center_icon"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="账号昵称" />

        <ImageView
            android:id="@+id/iv_account_at"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_20"
            android:singleLine="true"
            android:src="@mipmap/icon_account_at"
            android:textColor="@color/home_333333"
            android:textSize="@dimen/sp_28"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@+id/txt_account_role"
            app:layout_constraintLeft_toRightOf="@+id/txt_account_name"
            app:layout_constraintTop_toTopOf="@+id/txt_account_name" />

        <TextView
            android:id="@+id/txt_account_role"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_20"
            android:paddingEnd="@dimen/dp_5"
            android:text="管理员"
            android:textColor="@color/home_666666"
            android:textSize="@dimen/sp_23"
            android:maxLength="7"
            android:singleLine="true"
            app:layout_constraintLeft_toRightOf="@+id/img_msg_center_icon"
            app:layout_constraintTop_toBottomOf="@+id/txt_account_name" />

        <com.hjq.shape.view.ShapeTextView
            android:id="@+id/txt_account_setting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/dp_20"
            android:paddingHorizontal="@dimen/dp_30"
            android:paddingVertical="@dimen/dp_8"
            android:text="禁用"
            android:textColor="@color/red"
            android:textSize="@dimen/sp_24"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:shape_radius="@dimen/dp_10"
            app:shape_strokeColor="@color/red"
            app:shape_strokeWidth="@dimen/dp_2"
            tools:ignore="RtlSymmetry" />

        <com.hjq.shape.view.ShapeTextView
            android:id="@+id/txt_account_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/dp_20"
            android:gravity="center"
            android:paddingHorizontal="@dimen/dp_30"
            android:paddingVertical="@dimen/dp_8"
            android:text="编辑"
            android:textColor="@color/home_666666"
            android:textSize="@dimen/sp_24"
            android:layout_marginTop="@dimen/dp_20"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txt_account_setting"
            app:shape_radius="@dimen/dp_10"
            app:shape_strokeColor="@color/textColorHint"
            app:shape_strokeWidth="@dimen/dp_2"
            tools:ignore="RtlSymmetry" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>