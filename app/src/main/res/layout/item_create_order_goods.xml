<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cos"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/dp_15"
        android:background="@drawable/home_order_bg"
        android:paddingVertical="@dimen/dp_20"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/img_order_goods_select"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_goods_checkbox"
            app:layout_constraintBottom_toBottomOf="@+id/txt_order_goods_txt"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="@id/txt_order_goods_name" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/img_order_goods_icon"
            android:layout_width="@dimen/dp_112"
            android:layout_height="@dimen/dp_112"
            android:layout_marginStart="@dimen/dp_20"
            android:src="@mipmap/logo"
            app:layout_constraintBottom_toBottomOf="@+id/txt_order_goods_txt"
            app:layout_constraintLeft_toRightOf="@+id/img_order_goods_select"
            app:layout_constraintTop_toTopOf="@id/txt_order_goods_name" />


        <EditText
            android:id="@+id/txt_order_goods_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_20"
            android:singleLine="true"
            tools:text="默认商品"
            android:textColor="@color/home_333333"
            android:textSize="@dimen/sp_28"
            android:background="@null"
            android:maxLines="1"
            app:layout_constraintLeft_toRightOf="@+id/img_order_goods_icon"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/txt_order_goods_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_20"
            android:singleLine="true"
            android:text="¥"
            android:textColor="@color/red"
            android:textSize="@dimen/sp_24"
            app:layout_constraintBaseline_toBaselineOf="@+id/txt_order_goods_price"
            app:layout_constraintLeft_toRightOf="@+id/img_order_goods_icon" />

        <EditText
            android:id="@+id/txt_order_goods_price"
            android:layout_width="@dimen/dp_200"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_20"
            android:background="@null"
            android:inputType="numberDecimal"
            android:singleLine="true"
            android:textColor="@color/red"
            android:textSize="@dimen/sp_36"
            app:layout_constraintLeft_toRightOf="@+id/txt_order_goods_txt"
            app:layout_constraintTop_toBottomOf="@+id/txt_order_goods_name"
            tools:text="1000000" />

        <LinearLayout
            android:id="@+id/ll_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="@+id/txt_order_goods_price"
            app:layout_constraintRight_toRightOf="parent">

            <ImageView
                android:id="@+id/edt_add_jian"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="6dp"
                android:layout_marginEnd="4dp"
                android:layout_marginBottom="6dp"
                android:src="@drawable/icon_goods_subtract_false"
                android:gravity="center"
                android:paddingStart="4dp"
                android:paddingEnd="4dp"
                android:text=""
                android:textSize="14sp" />


            <EditText
                android:id="@+id/edt_add_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:gravity="center"
                android:inputType="number"
                android:maxLength="3"
                android:minWidth="38dp"
                android:paddingVertical="6dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:text="1"
                android:textColor="@color/home_333333"
                android:textSize="16sp" />


            <ImageView
                android:id="@+id/edt_add_jia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_marginTop="6dp"
                android:layout_marginBottom="6dp"
                android:background="@drawable/icon_goods_add_true"
                android:gravity="center"
                android:textSize="18sp" />
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>