<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/order_remark_F4F4F4">

    <com.hjq.bar.TitleBar
        android:id="@+id/TitleBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/red"
        app:layout_constraintTop_toTopOf="parent"
        app:leftIcon="@drawable/bar_arrows_left_white"
        app:lineVisible="false"
        app:rightTitleSize="@dimen/sp_36"
        app:title=""
        app:titleColor="@color/white" />

    <com.hjq.shape.layout.ShapeLinearLayout
        android:id="@+id/slbg"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_150"
        android:background="@drawable/my_recharge_bg_red"
        app:layout_constraintTop_toBottomOf="@+id/TitleBar"
        app:shape_bottomLeftRadius="@dimen/dp_20"
        app:shape_bottomRightRadius="@dimen/dp_20">


    </com.hjq.shape.layout.ShapeLinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_36"

        android:layout_marginTop="@dimen/dp_100"
        android:layout_marginRight="@dimen/dp_36"

        android:background="@drawable/bg_import_white_30"
        app:layout_constraintTop_toTopOf="@+id/slbg">

        <ImageView
            android:id="@+id/iv_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_30"
            android:layout_marginTop="@dimen/dp_30"
            android:layout_marginBottom="@dimen/dp_34"
            android:src="@drawable/home_search_icon_red"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:maxLength="24"

            android:id="@+id/tv_Stock_Code"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_20"
            android:layout_marginBottom="@dimen/dp_10"
            android:background="@null"
            android:focusable="false"
            android:gravity="center|left"
            android:hint="请输入顾客提供的券码"
            android:textColor="@color/home_333333"
            android:textSize="@dimen/sp_36"
            app:layout_constraintBottom_toBottomOf="parent"

            app:layout_constraintLeft_toRightOf="@+id/iv_search"
            app:layout_constraintRight_toRightOf="@+id/iv_search_close_edt"

            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:visibility="gone"
            android:id="@+id/iv_search_close_edt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dp_34"
            android:src="@drawable/search_close_edt"
            app:layout_constraintBottom_toBottomOf="@+id/tv_Stock_Code"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tv_Stock_Code" />


    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_marginBottom="@dimen/dp_20"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/cl_keyboard"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <TextView

            android:id="@+id/tv_left"
            android:layout_width="@dimen/dp_64"
            android:layout_height="@dimen/dp_1"
            android:background="#E2E2E2"
            app:layout_constraintBottom_toBottomOf="@+id/tv_type_name"
            android:layout_marginRight="@dimen/dp_20"
            app:layout_constraintRight_toLeftOf="@+id/tv_type_name"
            app:layout_constraintTop_toTopOf="@+id/tv_type_name" />

        <TextView
            android:textSize="@dimen/sp_28"
            android:textColor="#999999"
            android:drawablePadding="@dimen/dp_20"
            android:gravity="center"
            android:text=""
            android:id="@+id/tv_type_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"

            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_width="@dimen/dp_64"
            android:layout_height="@dimen/dp_1"
            android:background="#E2E2E2"
            app:layout_constraintBottom_toBottomOf="@+id/tv_type_name"
            app:layout_constraintLeft_toRightOf="@+id/tv_type_name"
            app:layout_constraintTop_toTopOf="@+id/tv_type_name" />


    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout

        android:id="@+id/cl_keyboard"

        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingLeft="@dimen/dp_10"
        android:paddingTop="@dimen/dp_20"
        android:paddingRight="@dimen/dp_10"
        android:paddingBottom="@dimen/dp_20"
        app:layout_constraintBottom_toBottomOf="parent"

        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_1"
            style="@style/tv_pay_key"

            android:layout_marginLeft="4dp"
            android:text="1"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_2"
            style="@style/tv_pay_key"
            android:layout_marginLeft="7dp"
            android:text="2"
            app:layout_constraintLeft_toRightOf="@+id/tv_1"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_3"
            style="@style/tv_pay_key"
            android:layout_marginLeft="7dp"
            android:text="3"
            app:layout_constraintLeft_toRightOf="@+id/tv_2"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_0"
            style="@style/tv_pay_key"
            android:layout_marginLeft="7dp"
            android:text="0"
            app:layout_constraintLeft_toRightOf="@+id/tv_3"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_4"
            style="@style/tv_pay_key"
            android:layout_marginTop="10dp"
            android:text="4"
            app:layout_constraintLeft_toLeftOf="@+id/tv_1"
            app:layout_constraintTop_toBottomOf="@+id/tv_0" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_5"
            style="@style/tv_pay_key"
            android:layout_marginTop="10dp"
            android:text="5"
            app:layout_constraintLeft_toLeftOf="@+id/tv_2"
            app:layout_constraintTop_toBottomOf="@+id/tv_0" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_6"
            style="@style/tv_pay_key"
            android:layout_marginTop="10dp"
            android:text="6"
            app:layout_constraintLeft_toLeftOf="@+id/tv_3"
            app:layout_constraintTop_toBottomOf="@+id/tv_0" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_7"
            style="@style/tv_pay_key"
            android:layout_marginTop="10dp"
            android:text="7"
            app:layout_constraintLeft_toLeftOf="@+id/tv_4"
            app:layout_constraintTop_toBottomOf="@+id/tv_4" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_8"
            style="@style/tv_pay_key"
            android:layout_marginTop="10dp"
            android:text="8"
            app:layout_constraintLeft_toLeftOf="@+id/tv_2"
            app:layout_constraintTop_toBottomOf="@+id/tv_4" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_9"
            style="@style/tv_pay_key"
            android:layout_marginTop="10dp"
            android:text="9"
            app:layout_constraintLeft_toLeftOf="@+id/tv_3"
            app:layout_constraintTop_toBottomOf="@+id/tv_4" />

        <ImageView
            android:id="@+id/tv_clear"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:background="@drawable/bg_pay"
            android:focusable="true"
            android:gravity="center"
            android:src="@drawable/ic_numdel"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_36"
            app:layout_constraintLeft_toLeftOf="@+id/tv_0"
            app:layout_constraintRight_toRightOf="@+id/tv_0"
            app:layout_constraintTop_toTopOf="@+id/tv_6"
            tools:text="0" />

        <androidx.appcompat.widget.AppCompatTextView

            android:id="@+id/tv_ok"
            android:layout_width="0dp"
            android:layout_height="0dp"

            android:layout_marginTop="10dp"
            android:background="@drawable/indicator_bottom_line"
            android:focusable="true"
            android:gravity="center"
            android:text="验\n证"
            android:textColor="@color/white"
            android:textSize="32sp"
            app:layout_constraintBottom_toBottomOf="@+id/tv_9"
            app:layout_constraintLeft_toLeftOf="@+id/tv_0"
            app:layout_constraintRight_toRightOf="@+id/tv_0"
            app:layout_constraintTop_toBottomOf="@+id/tv_clear" />


    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>