<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/order_empty"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F7F7F7"
    android:gravity="center">

    <com.hjq.shape.layout.ShapeConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="16dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        app:layout_constraintTop_toTopOf="parent"
        app:shape_radius="@dimen/dp_24"
        app:shape_solidColor="@color/white">


        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/img"
            android:layout_marginTop="16dp"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:src="@drawable/ic_store_managemnet"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/txt_error"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/img"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp_30"
            android:text="您还没有发货门店"
            android:textStyle="bold"
            android:textColor="@color/home_333333"
            android:textSize="@dimen/sp_32"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/img" />
        <TextView
            android:id="@+id/tv_name_t"
            android:textColor="@color/home_666666"
            android:textSize="@dimen/sp_32"
            android:text="店铺需关联发货门店，请去新建门店"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@+id/txt_error"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <com.hjq.shape.view.ShapeTextView
            android:id="@+id/tv_decreate"
            android:layout_marginTop="@dimen/dp_22"
            android:textColor="@color/red"
            android:text="去新建"
            android:paddingLeft="@dimen/dp_44"
            android:paddingRight="@dimen/dp_44"
            android:paddingTop="@dimen/dp_20"
            android:paddingBottom="@dimen/dp_20"
            android:background="@drawable/order_search_bg_red"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_name_t"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </com.hjq.shape.layout.ShapeConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>