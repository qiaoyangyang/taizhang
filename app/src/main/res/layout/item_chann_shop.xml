<?xml version="1.0" encoding="utf-8"?>
<com.hjq.shape.layout.ShapeConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:shape_solidColor="@color/white"
    app:shape_radius="@dimen/dp_24"

    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/iv_picture"
        android:layout_marginLeft="@dimen/dp_24"
        android:layout_marginTop="@dimen/dp_40"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"


        android:layout_width="@dimen/dp_56"
        android:layout_height="@dimen/dp_56" />

    <TextView
        android:id="@+id/tv_name"
        android:layout_marginLeft="@dimen/dp_16"
        android:textColor="@color/home_333333"
        android:textSize="@dimen/sp_36"
        app:layout_constraintTop_toTopOf="@+id/iv_picture"
        app:layout_constraintBottom_toBottomOf="@+id/iv_picture"
        android:text="美团外卖"
        app:layout_constraintLeft_toRightOf="@+id/iv_picture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_marginLeft="@dimen/dp_16"
        android:textSize="@dimen/sp_28"
        android:textColor="#FE4B48"
        android:text="已绑定"
        app:layout_constraintTop_toTopOf="@+id/tv_name"
        app:layout_constraintBottom_toBottomOf="@+id/tv_name"
        app:layout_constraintLeft_toRightOf="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <com.hjq.shape.layout.ShapeConstraintLayout
        android:layout_marginTop="@dimen/dp_32"
        android:layout_marginBottom="@dimen/dp_32"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginRight="@dimen/dp_24"
        app:layout_constraintLeft_toLeftOf="@+id/iv_picture"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_picture"
        android:layout_width="0dp"
        app:shape_solidColor="#FAFAFA"
        app:shape_radius="@dimen/dp_24"
        android:layout_height="wrap_content">
        <TextView
            android:textColor="@color/home_666666"
            android:textSize="@dimen/sp_28"
            android:id="@+id/tv_name_t"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="@dimen/dp_32"
            android:layout_marginTop="@dimen/dp_16"
            android:layout_marginBottom="@dimen/dp_16"
            android:text="t_32gN5uUl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_width="wrap_content"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginRight="@dimen/dp_32"
            android:text="ID：3287162"
            android:textColor="@color/home_666666"
            android:textSize="@dimen/sp_28"
            android:layout_height="wrap_content"/>

    </com.hjq.shape.layout.ShapeConstraintLayout>


</com.hjq.shape.layout.ShapeConstraintLayout>