<?xml version="1.0" encoding="utf-8"?>
<com.hjq.shape.layout.ShapeConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:shape_solidColor="@color/white"
    app:shape_topLeftRadius="@dimen/dp_24"
    app:shape_topRightRadius="@dimen/dp_24">


    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="绑定物流"
        android:textColor="@color/home_333333"
        android:textSize="@dimen/sp_36"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iv_close_recharge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/tv_title"
        android:layout_alignBottom="@+id/tv_title"
        android:layout_alignParentEnd="true"
        android:paddingHorizontal="@dimen/dp_20"
        android:src="@drawable/search_close_edt"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_title" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/tv_title"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="15dp"
        android:textStyle="bold"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:id="@+id/txt_title2"
        android:text="已有UU跑腿账号"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txt_uu_tip"
        android:text="授权后即可发单,与UU跑腿里价格、优惠一致。\n如果没有账号，可致电UU跑腿4006-997-999咨询注册事宜，或直接下载UU跑腿APP注册账号。"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0"
        android:paddingHorizontal="15dp"
        android:paddingVertical="5dp"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@+id/txt_title2"/>

    <View
        android:layout_width="0dp"
        android:layout_height="0.5dp"
        android:background="#E7E7E7"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_uu_tip"
        android:layout_marginHorizontal="15dp"
        android:layout_marginTop="15dp"
        android:id="@+id/uu_bind_line"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@+id/uu_bind_line"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="15dp"
        android:textSize="14sp"
        android:id="@+id/uu_txt_phone"
        android:text="手机号"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@+id/uu_bind_line"
        app:layout_constraintLeft_toRightOf="@+id/uu_txt_phone"
        android:layout_marginLeft="5dp"
        android:textSize="14sp"
        android:textColor="@color/red"
        android:id="@+id/uu_txt_phone_red"
        android:text="*"/>

    <com.meiling.common.view.ClearEditText
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/uu_txt_phone_red"
        app:layout_constraintTop_toBottomOf="@+id/uu_bind_line"
        android:gravity="right"
        android:textSize="14sp"
        android:layout_marginRight="15dp"
        android:background="@null"
        android:layout_marginTop="15dp"
        android:id="@+id/edt_uu_bind_phone"
        android:paddingRight="5dp"
        android:hint="请输入"/>

    <View
        android:layout_width="0dp"
        android:layout_height="0.5dp"
        android:background="#E7E7E7"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/uu_txt_phone"
        android:layout_marginHorizontal="15dp"
        android:layout_marginTop="15dp"
        android:id="@+id/uu_bind_line2"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"
        android:id="@+id/txt_uu_bind_code"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/uu_bind_line2"
        android:text="验证码"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="5dp"
        android:id="@+id/txt_uu_bind_code2"
        android:textColor="@color/red"
        app:layout_constraintLeft_toRightOf="@+id/txt_uu_bind_code"
        app:layout_constraintTop_toBottomOf="@+id/uu_bind_line2"
        android:text="*"/>

    <com.meiling.common.view.ClearEditText
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toLeftOf="@+id/txt_auth_code"
        app:layout_constraintLeft_toRightOf="@+id/txt_uu_bind_code2"
        app:layout_constraintTop_toBottomOf="@+id/uu_bind_line2"
        android:gravity="right"
        android:textSize="14sp"
        android:layout_marginRight="15dp"
        android:background="@null"
        android:layout_marginTop="15dp"
        android:id="@+id/edt_uu_bind_code"
        android:paddingRight="5dp"
        android:hint="请输入"/>


    <com.hjq.shape.view.ShapeTextView
        android:id="@+id/txt_auth_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@null"
        android:gravity="center"
        android:imeOptions="actionDone"
        android:paddingHorizontal="@dimen/dp_20"
        android:paddingVertical="@dimen/dp_10"
        android:layout_marginRight="15dp"
        android:shadowColor="@color/home_333333"
        android:visibility="gone"
        android:singleLine="true"
        android:text="获取验证码"
        android:textColor="@color/white"
        android:textColorHint="@color/home_999999"
        android:textSize="@dimen/sp_25"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/uu_bind_line2"
        app:layout_constraintBottom_toBottomOf="@+id/uu_bind_line3"
        app:layout_constraintBaseline_toBaselineOf="@+id/edt_uu_bind_code"
        app:shape_radius="@dimen/dp_100"
        app:shape_solidColor="@color/red"
        tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck" />

    <View
        android:layout_width="0dp"
        android:layout_height="0.5dp"
        android:background="#E7E7E7"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_uu_bind_code"
        android:layout_marginHorizontal="15dp"
        android:layout_marginTop="15dp"
        android:id="@+id/uu_bind_line3"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/uu_bind_line3"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="20dp"
        android:enabled="false"
        android:text="确定"
        android:textColor="@color/white"
        android:layout_marginHorizontal="15dp"
        android:id="@+id/btn_uu_sure"
        android:background="@drawable/login_btn_selector"/>

</com.hjq.shape.layout.ShapeConstraintLayout>