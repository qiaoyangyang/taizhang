<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF7F7F7"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">


    <com.hjq.bar.TitleBar
        android:id="@+id/TitleBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:barStyle="transparent"
        app:layout_constraintTop_toTopOf="parent"
        app:leftIcon="@drawable/bar_arrows_left_white"
        app:rightBackground="@null"
        app:rightTitleSize="@dimen/sp_14"
        app:titleColor="@color/white"
        android:background="@color/red"
        app:title="选择打印机" />
    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/TitleBar"
        android:orientation="vertical"
        android:id="@+id/lin"
        android:paddingHorizontal="15dp"
        android:paddingVertical="10dp"
        android:background="@color/red">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            android:text="选择云打印机"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="#ffffff"
            android:layout_marginTop="10dp"
            android:text="自动打印小票"/>

    </androidx.appcompat.widget.LinearLayoutCompat>


    <com.hjq.shape.layout.ShapeConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:shape_radius="10dp"
        app:shape_solidColor="@color/white"
        android:paddingVertical="20dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="20dp"
        android:id="@+id/lin2"
        app:layout_constraintTop_toBottomOf="@+id/lin">

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="20dp"
            android:id="@+id/printImg"
            android:src="@mipmap/print_img1"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/printImg"
            android:layout_marginLeft="20dp"
            android:textSize="15sp"
            android:textColor="#333333"
            android:text="芯烨云"/>

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="绑定"
            android:textColor="@color/white"
            android:paddingHorizontal="30dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:background="@drawable/login_btn_selector"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginRight="20dp"
            android:textSize="14sp"
            android:id="@+id/btnPrintBind"/>

    </com.hjq.shape.layout.ShapeConstraintLayout>

    <com.hjq.shape.layout.ShapeConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:shape_radius="10dp"
        app:shape_solidColor="@color/white"
        android:paddingVertical="20dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="20dp"
        android:id="@+id/lin3"
        app:layout_constraintTop_toBottomOf="@+id/lin2">

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="20dp"
            android:src="@mipmap/print_img2"
            android:id="@+id/printImg2"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/printImg2"
            android:layout_marginLeft="20dp"
            android:textSize="15sp"
            android:textColor="#333333"
            android:text="佳博云"/>

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="绑定"
            android:textColor="@color/white"
            android:paddingHorizontal="30dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:background="@drawable/login_btn_selector"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginRight="20dp"
            android:textSize="14sp"
            android:id="@+id/btnPrintBind2"/>

    </com.hjq.shape.layout.ShapeConstraintLayout>

    <com.hjq.shape.layout.ShapeConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:shape_radius="10dp"
        app:shape_solidColor="@color/white"
        android:paddingVertical="20dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/lin3">

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="20dp"
            android:id="@+id/printImg3"
            android:src="@mipmap/print_img3"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/printImg3"
            android:layout_marginLeft="20dp"
            android:textSize="15sp"
            android:textColor="#333333"
            android:text="商米"/>

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="绑定"
            android:textColor="@color/white"
            android:paddingHorizontal="30dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:background="@drawable/login_btn_selector"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginRight="20dp"
            android:textSize="14sp"
            android:id="@+id/btnPrintBind3"/>

    </com.hjq.shape.layout.ShapeConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>