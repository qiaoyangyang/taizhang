<?xml version="1.0" encoding="utf-8"?>
<com.hjq.shape.layout.ShapeConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/shapecl"
    android:paddingTop="16dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:layout_marginLeft="12dp"
    android:layout_marginRight="12dp"
    app:layout_constraintTop_toTopOf="@+id/slbg"
    app:shape_solidColor="@color/white"
    app:shape_radius="@dimen/dp_24"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        app:layout_constraintLeft_toLeftOf="parent"
        android:textSize="@dimen/sp_32"
        android:textColor="#2B2A2A"
        android:id="@+id/tv_name"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:textSize="@dimen/sp_28"
        android:textColor="#666666"
        android:id="@+id/order_price"
        android:layout_marginTop="@dimen/dp_26"
        app:layout_constraintLeft_toLeftOf="@+id/tv_name"
        android:text="订单价格："
        app:layout_constraintTop_toBottomOf="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView

        android:id="@+id/tv_dealValue"
        android:textSize="@dimen/sp_32"
        app:layout_constraintBottom_toBottomOf="@+id/order_price"
        app:layout_constraintRight_toRightOf="parent"
        android:textColor="#999999"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/tv_couponBuyPrice"
        android:layout_marginRight="@dimen/dp_16"
        app:layout_constraintRight_toLeftOf="@+id/tv_dealValue"
        app:layout_constraintBottom_toBottomOf="@+id/tv_dealValue"
        android:textSize="@dimen/sp_32"
        android:textColor="#FF4C4A"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/couponCode"
        android:layout_marginTop="@dimen/dp_20"
        app:layout_constraintLeft_toLeftOf="@+id/order_price"
        android:textSize="@dimen/sp_28"
        android:textColor="#666666"
        android:text="券码编号："
        app:layout_constraintTop_toBottomOf="@+id/order_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:gravity="right"
        app:layout_constraintLeft_toRightOf="@+id/couponCode"
        android:id="@+id/tv_couponCode"
        android:textSize="@dimen/sp_28"
        app:layout_constraintBottom_toBottomOf="@+id/couponCode"
        app:layout_constraintRight_toRightOf="parent"
        android:textColor="#333333"
        android:layout_width="0dp"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/type"
        android:layout_marginTop="@dimen/dp_20"
        android:text="券码类型："
        app:layout_constraintTop_toBottomOf="@+id/couponCode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView

        android:id="@+id/tv_type"
        android:textSize="@dimen/sp_28"
        app:layout_constraintBottom_toBottomOf="@+id/type"
        app:layout_constraintRight_toRightOf="parent"
        android:textColor="#333333"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:textSize="@dimen/sp_28"
        android:id="@+id/couponUseTime"
        android:layout_marginTop="@dimen/dp_20"
        android:text="核销时间："
        app:layout_constraintTop_toBottomOf="@+id/type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView

        android:id="@+id/tv_couponUseTime"
        android:textSize="@dimen/sp_28"
        app:layout_constraintBottom_toBottomOf="@+id/couponUseTime"
        app:layout_constraintRight_toRightOf="parent"
        android:textColor="#333333"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:textSize="@dimen/sp_28"
        android:id="@+id/orderId"
        android:layout_marginTop="@dimen/dp_20"
        android:text="订单编号："
        app:layout_constraintTop_toBottomOf="@+id/couponUseTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView

        android:id="@+id/tv_orderId"
        android:textSize="@dimen/sp_28"
        app:layout_constraintBottom_toBottomOf="@+id/orderId"
        app:layout_constraintRight_toRightOf="parent"
        android:textColor="#333333"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <View
        android:id="@+id/View_lin"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/orderId"
        android:background="#F4F4F4"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <com.hjq.shape.view.ShapeTextView
        android:textSize="@dimen/sp_24"
        android:id="@+id/tv_status"
        android:paddingLeft="@dimen/dp_16"
        android:paddingRight="@dimen/dp_16"
        android:paddingBottom="@dimen/dp_4"
        android:paddingTop="@dimen/dp_4"
        app:shape_radius="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_24"
        android:layout_marginBottom="@dimen/dp_24"
        android:text="已核销"
        android:layout_width="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/View_lin"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/tv_shopName"
        android:textColor="#999999"
        android:textSize="@dimen/sp_24"
        android:maxLines="1"
        android:layout_marginRight="@dimen/dp_32"
        android:layout_marginLeft="@dimen/dp_20"
        app:layout_constraintLeft_toRightOf="@+id/tv_status"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBaseline_toBaselineOf="@+id/tv_status"
        android:layout_width="0dp"
        android:layout_height="wrap_content"/>



</com.hjq.shape.layout.ShapeConstraintLayout>