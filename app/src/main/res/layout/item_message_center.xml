<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="@dimen/dp_20"
    android:layout_marginVertical="@dimen/dp_10"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_15"
        android:background="@drawable/home_order_bg"
        android:paddingVertical="@dimen/dp_20"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/img_msg_center_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/dp_20"
            android:layout_marginVertical="@dimen/dp_10"
            android:src="@mipmap/logo"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/txt_msg_center_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_20"
            android:singleLine="true"
            android:textColor="@color/home_333333"
            android:textSize="@dimen/sp_28"
            app:layout_constraintLeft_toRightOf="@+id/img_msg_center_icon"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="物流消息" />

        <TextView
            android:id="@+id/txt_msg_center_content"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_20"
            android:paddingVertical="@dimen/dp_10"
            android:paddingEnd="@dimen/dp_5"
            android:text="121212211212122112121221121212211212122112121221121212211212122112121221"
            android:textColor="@color/home_666666"
            android:textSize="@dimen/sp_23"
            app:layout_constraintLeft_toRightOf="@+id/img_msg_center_icon"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txt_msg_center_name" />

        <TextView
            android:id="@+id/txt_msg_center_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/dp_20"
            android:paddingEnd="@dimen/dp_20"
            android:textColor="@color/home_666666"
            android:textSize="@dimen/sp_24"
            app:layout_constraintBaseline_toBaselineOf="@+id/txt_msg_center_name"
            app:layout_constraintRight_toRightOf="parent"
            tools:ignore="RtlSymmetry"
            tools:text="1111" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>