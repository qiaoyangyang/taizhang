<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_15"
        android:background="@drawable/home_order_bg"
        android:paddingVertical="@dimen/dp_20"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/img_order_shop_icon"
            android:layout_width="@dimen/dp_70"
            android:layout_height="@dimen/dp_70"
            android:src="@mipmap/logo"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txt_order_refund"
            android:layout_width="@dimen/dp_70"
            android:layout_height="@dimen/dp_70"
            android:text="已退款"
            android:gravity="center"
            android:textSize="@dimen/sp_20"
            android:textColor="@color/white"
            android:alpha="0.7"
            android:visibility="gone"
            android:background="@color/home_666666"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/txt_order_shop_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_20"
            android:singleLine="true"
            android:text="阿卡波罗生日蛋糕"
            android:textColor="@color/home_333333"
            android:textSize="@dimen/sp_24"
            app:layout_constraintBottom_toTopOf="@+id/txt_order_shop_spec"
            app:layout_constraintLeft_toRightOf="@+id/img_order_shop_icon"
            app:layout_constraintTop_toTopOf="@+id/img_order_shop_icon" />

        <TextView
            android:id="@+id/txt_order_shop_spec"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_20"
            android:singleLine="true"
            android:text="6英寸；榛子薄脆口味"
            android:textColor="@color/home_666666"
            android:textSize="@dimen/sp_20"
            app:layout_constraintBottom_toBottomOf="@+id/img_order_shop_icon"
            app:layout_constraintLeft_toRightOf="@+id/img_order_shop_icon" />


        <TextView
            android:id="@+id/txt_order_shop_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/dp_30"
            android:text="X1"
            android:textColor="@color/home_333333"
            android:textSize="@dimen/sp_32"
            app:layout_constraintBaseline_toBaselineOf="@+id/txt_order_shop_spec"
            app:layout_constraintRight_toLeftOf="@+id/txt_order_shop_price"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/txt_order_shop_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp_5"
            android:text="¥1111"
            android:textColor="@color/home_333333"
            android:textSize="@dimen/sp_24"
            app:layout_constraintBaseline_toBaselineOf="@+id/txt_order_shop_spec"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>