<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/zxing_transparent">

    <com.hjq.shape.layout.ShapeLinearLayout
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:id="@+id/ll_btn"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        app:shape_topLeftRadius="20dp"
        app:shape_topRightRadius="20dp"
        app:shape_solidColor="@color/white"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="58mm"
            android:textColor="#333333"
            android:textSize="@dimen/sp_32"
            android:paddingVertical="15dp"
            android:gravity="center"
            android:id="@+id/size58"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/home_FEFAF0"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="80mm"
            android:textColor="#333333"
            android:paddingVertical="15dp"
            android:gravity="center"
            android:textSize="@dimen/sp_32"
            android:id="@+id/size80"
            />


    </com.hjq.shape.layout.ShapeLinearLayout>
    <com.hjq.shape.view.ShapeButton
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ll_btn"
        android:id="@+id/btn_ok_exit"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:gravity="center"
        android:shadowColor="@color/home_666666"
        android:text="取消"
        android:textColor="#333333"
        android:textSize="@dimen/sp_32"
        android:paddingVertical="15dp"
        app:shape_solidColor="@color/white" />


</androidx.constraintlayout.widget.ConstraintLayout>