<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:roundiv="http://schemas.android.com/tools"
    android:id="@+id/cl_bg"
    android:layout_width="match_parent"
    android:background="@drawable/bg_data"
    android:layout_margin="@dimen/dp_10"
    android:layout_height="wrap_content"
 >


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView


            android:id="@+id/sku"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/red"
            android:gravity="center"
            android:paddingLeft="@dimen/dp_12"
            android:paddingTop="@dimen/dp_2"
            android:paddingRight="@dimen/dp_12"
            android:paddingBottom="@dimen/dp_2"
            android:text="SKU"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_14"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView


            android:id="@+id/tv_sku"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="#F4F4F4"
            android:gravity="center"
            android:text="237812783792738"
            android:textColor="@color/red"
            android:textSize="@dimen/sp_14"
            app:layout_constraintBottom_toBottomOf="@+id/sku"
            app:layout_constraintLeft_toRightOf="@+id/sku"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/sku" />

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_12"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_10"
            android:ellipsize="end"
            android:letterSpacing="0.05"
            android:lineSpacingMultiplier="1.2"
            android:maxLines="2"
            android:minLines="2"
            android:text="草莓小熊小蛋糕草莓草莓小熊小蛋糕草莓小熊小蛋糕草莓小熊小蛋糕草莓小熊小蛋草莓小熊小蛋糕草莓小熊小蛋糕草莓小熊小蛋糕草莓小熊小蛋草莓小熊小蛋糕草莓小熊小蛋糕草莓小熊小蛋糕草莓小熊小蛋草莓小熊小蛋糕草莓小熊小蛋糕草莓小熊小蛋糕草莓小熊小蛋草莓小熊小蛋糕草莓小熊小蛋糕草莓小熊小蛋糕草莓小熊小蛋草莓小熊小蛋糕草莓小熊小蛋糕草莓小熊小蛋糕草莓小熊小蛋草莓小熊小蛋糕草莓小熊小蛋糕草莓小熊小蛋糕草莓小熊小蛋小熊小蛋糕草莓小熊小蛋糕草莓小熊小蛋"
            android:textColor="#1F1F1F"
            android:textSize="@dimen/sp_22"
            app:layout_constraintLeft_toLeftOf="@+id/sku"
            app:layout_constraintRight_toRightOf="@+id/tv_sku"
            app:layout_constraintTop_toBottomOf="@+id/tv_sku" />

        <ImageView

            android:id="@+id/iv_commodity_url"
            android:layout_width="@dimen/dp_80"
            android:layout_height="@dimen/dp_80"
            android:layout_marginLeft="@dimen/dp_12"
            android:layout_marginTop="@dimen/sp_22"

            app:layout_constraintLeft_toLeftOf="@+id/sku"
            app:layout_constraintTop_toBottomOf="@+id/tv_name" />

        <com.meiling.common.flowlayout.FlowLayout
            app:layout_constraintBottom_toBottomOf="@+id/iv_commodity_url"
            android:maxLines="2"

            android:id="@+id/flash_light_layout"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"



            app:layout_constraintLeft_toRightOf="@+id/iv_commodity_url"
            app:layout_constraintRight_toRightOf="@+id/tv_sku"
            app:layout_constraintTop_toTopOf="@+id/iv_commodity_url" />

        <TextView
            android:id="@+id/Select_Sum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_22"
            android:text="入库数："
            android:textColor="#909090"
            android:textSize="@dimen/sp_18"
            app:layout_constraintLeft_toLeftOf="@+id/iv_commodity_url"
            app:layout_constraintTop_toBottomOf="@+id/iv_commodity_url" />

        <TextView
            android:id="@+id/tv_Select_Sum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="16"
            android:textColor="#1F1F1F"
            android:textSize="@dimen/sp_22"
            android:textStyle="bold"
            app:layout_constraintBaseline_toBaselineOf="@+id/Select_Sum"
            app:layout_constraintLeft_toLeftOf="@+id/flash_light_layout" />

        <TextView
            android:layout_marginLeft="5dp"
            android:id="@+id/tv_uni"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="个"
            android:textColor="#1F1F1F"
            android:textSize="@dimen/sp_18"
            app:layout_constraintBaseline_toBaselineOf="@+id/Select_Sum"
            app:layout_constraintLeft_toRightOf="@+id/tv_Select_Sum" />

        <TextView
            android:id="@+id/tv_01"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_marginTop="@dimen/dp_22"
            android:background="#50D8D8D8"
            app:layout_constraintLeft_toLeftOf="@+id/tv_name"
            app:layout_constraintRight_toRightOf="@+id/tv_name"
            app:layout_constraintTop_toBottomOf="@+id/tv_uni" />

        <TextView
            android:id="@+id/Library_sign"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_22"
            android:text="入库人："
            android:textColor="#909090"
            android:textSize="@dimen/sp_18"
            app:layout_constraintLeft_toLeftOf="@+id/iv_commodity_url"
            app:layout_constraintTop_toBottomOf="@+id/tv_01" />

        <TextView
            android:textStyle="bold"
            android:id="@+id/tv_Library_sign"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1566541255"
            android:textColor="#1F1F1F"
            android:textSize="@dimen/sp_18"
            app:layout_constraintBaseline_toBaselineOf="@+id/Library_sign"
            app:layout_constraintLeft_toLeftOf="@+id/flash_light_layout" />

        <TextView
            android:id="@+id/tv_02"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_marginTop="@dimen/dp_22"
            android:background="#50D8D8D8"
            app:layout_constraintLeft_toLeftOf="@+id/tv_01"
            app:layout_constraintRight_toRightOf="@+id/tv_01"
            app:layout_constraintTop_toBottomOf="@+id/tv_Library_sign" />

        <TextView

            android:id="@+id/tv_time"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_122"
            android:text="2055 - 02 - 04 04:55"
            android:textColor="#1F1F1F"
            android:textSize="@dimen/sp_16"
            app:layout_constraintLeft_toLeftOf="@+id/tv_name"
            app:layout_constraintRight_toRightOf="@+id/tv_name"
            app:layout_constraintTop_toBottomOf="@+id/tv_02" />

        <com.hjq.shape.layout.ShapeLinearLayout

            android:id="@+id/shapeLinearLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"

            android:layout_marginTop="@dimen/dp_22"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_time">

            <com.hjq.shape.view.ShapeTextView
                android:id="@+id/btn_Receipt"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#FFEBEB"
                android:gravity="center"
                android:paddingTop="@dimen/dp_14"
                android:paddingBottom="@dimen/dp_14"

                android:text="良品入库"
                android:textColor="@color/red"
                android:textSize="@dimen/sp_18"
                android:textStyle="bold"
                app:shape_solidColor="#FFEBEB"
                app:shape_strokeColor="@color/red"
                app:shape_strokeWidth="@dimen/dp_1" />

            <com.hjq.shape.view.ShapeTextView
                android:id="@+id/btn_withdraw"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/red"
                android:gravity="center"
                android:paddingTop="@dimen/dp_14"
                android:paddingBottom="@dimen/dp_14"
                android:text="撤回"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_18"
                android:textStyle="bold" />


        </com.hjq.shape.layout.ShapeLinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>