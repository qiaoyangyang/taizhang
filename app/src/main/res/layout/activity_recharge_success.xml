<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_themes_f7f7f7"
    android:orientation="vertical">


    <com.hjq.bar.TitleBar
        android:id="@+id/TitleBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/red"
        android:paddingTop="@dimen/dp_50"
        app:barStyle="transparent"
        app:layout_constraintTop_toTopOf="parent"
        app:rightBackground="@null"
        app:rightTitleSize="@dimen/sp_14" />


    <TextView
        android:id="@+id/txt_tip_tip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/txt_tip"
        android:layout_centerVertical="true"
        android:drawableTop="@mipmap/icon_finish"
        android:gravity="center"
        android:paddingHorizontal="@dimen/dp_30"
        android:paddingVertical="@dimen/dp_30"
        android:text="请确认是否支付完成"
        android:textColor="@color/home_666666"
        android:textSize="@dimen/sp_36" />

    <TextView
        android:id="@+id/txt_tip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:paddingHorizontal="@dimen/dp_30"
        android:text="如果您在微信/支付宝内支付成功，请点击“已完成支付”
如果支付失败，请点击“重新支付”"
        android:textColor="@color/home_999999"
        android:textSize="@dimen/sp_24" />

    <LinearLayout
        android:id="@+id/ll_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_tip"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingVertical="@dimen/dp_30"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">


        <com.hjq.shape.view.ShapeButton
            android:id="@+id/btn_again_recharge"
            android:layout_width="140dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/dp_20"
            android:layout_marginEnd="@dimen/dp_20"
            android:layout_weight="1"
            android:background="@drawable/order_bg_red"
            android:gravity="center"
            android:shadowColor="@color/home_666666"
            android:text="重新支付"
            android:textColor="@color/red"
            android:textSize="@dimen/sp_32"
            app:shape_radius="@dimen/sp_15"
            app:shape_solidColor="@color/white"
            app:shape_strokeColor="@color/red"
            app:shape_strokeWidth="@dimen/dp_1" />

        <com.hjq.shape.view.ShapeButton
            android:id="@+id/btn_pay_finish"
            android:layout_width="140dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/dp_20"
            android:layout_marginEnd="@dimen/dp_20"
            android:layout_weight="1"
            android:gravity="center"
            android:shadowColor="@color/home_666666"
            android:text="已完成支付"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_32"
            app:shape_radius="@dimen/sp_15"
            app:shape_solidColor="@color/red" />
    </LinearLayout>


</RelativeLayout>