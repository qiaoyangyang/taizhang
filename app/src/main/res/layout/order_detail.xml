<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content">

    <com.hjq.shape.layout.ShapeConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:shadowColor="@color/white"
        app:shape_bottomLeftRadius="@dimen/dp_20"
        app:shape_bottomRightRadius="@dimen/dp_20"
        app:layout_constraintTop_toTopOf="parent">


        <TextView
            android:layout_marginTop="@dimen/dp_16"
            android:id="@+id/tv_status_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/to_be_delivered"
            android:gravity="center"
            android:text="待取货"
            android:textColor="@color/red"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:id="@+id/ll_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            app:layout_constraintTop_toBottomOf="@+id/tv_status_title">

            <com.hjq.shape.view.ShapeButton
                android:id="@+id/tv_revocation"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_26"
                android:layout_marginTop="@dimen/dp_20"
                android:layout_marginRight="@dimen/dp_26"
                android:layout_marginBottom="@dimen/dp_20"
                android:layout_weight="1"
                android:gravity="center"
                android:paddingTop="10dp"
                android:paddingBottom="@dimen/dp_20"
                android:text="打印小票"
                android:textColor="#FF757575"
                app:shape_radius="@dimen/dp_20"
                app:shape_shadowColor="@color/white"

                app:shape_strokeColor="#FFC4C4C4"
                app:shape_strokeWidth="1dp" />

            <com.hjq.shape.view.ShapeButton
                android:id="@+id/tv_go_on"
                android:layout_width="0dp"

                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_26"
                android:layout_marginTop="10dp"
                android:layout_marginRight="@dimen/dp_26"
                android:layout_marginBottom="@dimen/dp_20"
                android:layout_weight="1"
                android:gravity="center"
                android:paddingTop="@dimen/dp_20"
                android:paddingBottom="@dimen/dp_20"
                android:text="配送详情"
                android:textColor="@color/white"

                app:shape_radius="@dimen/dp_20"
                app:shape_solidColor="#FF4C4A" />

        </LinearLayout>

    </com.hjq.shape.layout.ShapeConstraintLayout>
    <com.hjq.shape.layout.ShapeConstraintLayout
        android:layout_marginTop="@dimen/dp_16"
        android:layout_marginLeft="@dimen/dp_24"
        android:layout_marginRight="@dimen/dp_24"
        app:shape_topRightRadius="@dimen/dp_16"
        app:shape_topLeftRadius="@dimen/dp_16"
        android:layout_width="match_parent"
        android:background="#FFFFF6E8"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/iv_Platform_icon"
            android:layout_marginTop="@dimen/dp_16"
            android:layout_marginLeft="@dimen/dp_24"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:src="@drawable/douyin"
            android:layout_width="@dimen/dp_64"
            android:layout_height="@dimen/dp_64"/>
        <TextView
            app:layout_constraintTop_toTopOf="@+id/iv_Platform_icon"
            android:layout_marginLeft="@dimen/dp_12"
            android:id="@+id/tv_odd"
            android:textStyle="bold"
            android:textColor="@color/home_000000"
            android:textSize="28sp"
            android:gravity="center"
            app:layout_constraintLeft_toRightOf="@+id/iv_Platform_icon"
            android:text="3"

            android:layout_width="wrap_content"
            android:layout_height="0dp"/>
        <TextView
            android:layout_marginTop="@dimen/dp_20"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="@dimen/dp_16"
            android:text="美团店铺MONTCAKE SKPxxxxx门店"
            app:layout_constraintLeft_toLeftOf="@+id/iv_Platform_icon"
            app:layout_constraintTop_toBottomOf="@+id/tv_odd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:textSize="@dimen/sp_32"
            android:id="@+id/tv_time"
            android:layout_marginLeft="@dimen/dp_42"
            android:textColor="@color/red"
            app:layout_constraintBottom_toBottomOf="@+id/iv_Platform_icon"
            app:layout_constraintTop_toTopOf="@+id/iv_Platform_icon"
            android:text="今天15:00"
            app:layout_constraintLeft_toRightOf="@+id/tv_odd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_marginLeft="@dimen/dp_20"
            android:textSize="@dimen/sp_32"
            android:textColor="#E5000000"
            android:text="前送达"
            app:layout_constraintBaseline_toBaselineOf="@+id/tv_time"
            app:layout_constraintLeft_toRightOf="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


    </com.hjq.shape.layout.ShapeConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:background="@color/white"
        android:layout_marginLeft="@dimen/dp_24"
        android:layout_marginRight="@dimen/dp_24"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_500">

    </androidx.constraintlayout.widget.ConstraintLayout>


</LinearLayout>