<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <TextView
        android:textColor="#86909C"
        android:textSize="@dimen/sp_14"
        android:id="@+id/username"
        android:layout_marginTop="@dimen/dp_70"
        android:layout_marginLeft="@dimen/dp_36"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:text="登录密码"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:textSize="@dimen/sp_14"
        android:textColor="@color/red"
        android:layout_marginRight="@dimen/dp_36"
        android:id="@+id/tv_change_password"
        android:text="修改密码"
        app:layout_constraintTop_toTopOf="@+id/username"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:textSize="@dimen/sp_14"
        android:id="@+id/tv_user_name"
        android:textColor="#303133"
        android:layout_marginLeft="@dimen/dp_20"
        app:layout_constraintBaseline_toBaselineOf="@+id/username"
        android:text="可修改设置，密码至少6~16位数字"
        app:layout_constraintLeft_toRightOf="@+id/username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/tv_line"
        android:layout_marginTop="@dimen/dp_15"
        android:background="#D9D9D9"
        app:layout_constraintTop_toBottomOf="@+id/tv_user_name"
        app:layout_constraintLeft_toLeftOf="@+id/tv_user_name"
        app:layout_constraintRight_toRightOf="@+id/tv_change_password"
        android:layout_width="0dp"
        android:layout_height="1dp"/>
    <TextView
        android:id="@+id/tv_last_update"
        android:textSize="@dimen/sp_14"
        android:layout_marginTop="@dimen/dp_10"
        android:textColor="#959595"
        app:layout_constraintTop_toBottomOf="@+id/tv_line"
        app:layout_constraintRight_toRightOf="@+id/tv_change_password"
        android:text="2077 / 04 / 11 21:27 最后更新"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


</androidx.constraintlayout.widget.ConstraintLayout>