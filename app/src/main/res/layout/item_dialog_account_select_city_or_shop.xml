<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">


    <TextView
        android:id="@+id/txt_shop_or_city"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/dp_44"
        android:paddingVertical="@dimen/dp_30"
        android:text="门店"
        android:textColor="@color/home_333333"
        android:textSize="@dimen/sp_32"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/img_shop_or_city"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/txt_shop_or_city"
        android:layout_alignBottom="@+id/txt_shop_or_city"
        android:layout_alignParentEnd="true"
        android:src="@drawable/icon_checkbox_false" />

    <View
        android:id="@+id/view_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/order_remark_F4F4F4"
        app:layout_constraintTop_toBottomOf="@+id/txt_shop_or_city" />

</RelativeLayout>