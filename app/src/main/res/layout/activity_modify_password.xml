<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_themes_f7f7f7"
    android:orientation="vertical">


    <com.hjq.bar.TitleBar
        android:id="@+id/TitleBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/red"
        app:barStyle="transparent"
        android:paddingTop="@dimen/dp_50"
        app:layout_constraintTop_toTopOf="parent"
        app:rightBackground="@null"
        app:rightTitleSize="@dimen/sp_14"
        app:title="修改密码" />

    <TextView
        android:id="@+id/txt_login_account_tip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/TitleBar"
        android:paddingHorizontal="@dimen/dp_30"
        android:paddingVertical="@dimen/dp_30"
        android:text="修改密码后需要重新登录"
        android:textColor="@color/home_999999"
        android:textSize="@dimen/sp_24" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cos_dis_line"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/dp_30"
        android:layout_below="@+id/txt_login_account_tip"
        android:paddingVertical="@dimen/dp_30"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/txt_login_account"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/dp_30"
            android:text="登录账号"
            android:textColor="@color/home_333333"
            android:textSize="@dimen/sp_28"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/txt_login_account_show"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/dp_20"
            android:text="1000000"
            android:textColor="@color/home_000000"
            android:textSize="@dimen/sp_28"
            app:layout_constraintStart_toEndOf="@+id/txt_login_account"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/view_line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/app_themes_f7f7f7"
            app:layout_constraintTop_toBottomOf="@+id/txt_login_account" />

        <TextView
            android:id="@+id/txt_account_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingVertical="@dimen/dp_30"
            android:text="手机号码"
            android:textColor="@color/home_333333"
            android:textSize="@dimen/sp_28"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/view_line" />

        <TextView
            android:id="@+id/txt_login_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/dp_20"
            android:layout_marginVertical="@dimen/dp_10"
            android:text="1000000"
            android:textColor="@color/home_000000"
            android:textSize="@dimen/sp_28"
            app:layout_constraintBaseline_toBaselineOf="@+id/txt_account_phone"
            app:layout_constraintStart_toEndOf="@+id/txt_account_phone" />

        <View
            android:id="@+id/view_line1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/app_themes_f7f7f7"
            app:layout_constraintTop_toBottomOf="@+id/txt_account_phone" />

        <TextView
            android:id="@+id/txt_input_pwd_tip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingVertical="@dimen/dp_30"
            android:text="输入密码"
            app:drawableEndCompat="@drawable/icon_must_input"
            android:textColor="@color/home_333333"
            android:textSize="@dimen/sp_28"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/view_line1" />

        <EditText
            android:id="@+id/edt_input_pwd_tip"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_20"
            android:background="@null"
            android:hint="请输入密码"
            android:paddingVertical="@dimen/dp_30"
            android:textColor="@color/home_000000"
            android:textSize="@dimen/sp_28"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/txt_input_pwd_tip"
            app:layout_constraintEnd_toStartOf="@+id/img_pwd_input_clear"
            app:layout_constraintTop_toBottomOf="@+id/view_line1" />

        <ImageView
            android:id="@+id/img_pwd_input_clear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/dp_10"
            android:src="@drawable/search_close_edt"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="@+id/txt_input_pwd_tip"
            app:layout_constraintEnd_toStartOf="@+id/img_pwd_input_show"
            app:layout_constraintTop_toTopOf="@+id/txt_input_pwd_tip" />

        <CheckBox
            android:id="@+id/img_pwd_input_show"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/dp_10"
            android:button="@drawable/login_password_look_selector"
            android:checked="true"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="@+id/txt_input_pwd_tip"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/txt_input_pwd_tip" />

        <View
            android:id="@+id/view_line2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/app_themes_f7f7f7"
            app:layout_constraintTop_toBottomOf="@+id/txt_input_pwd_tip" />

        <TextView
            android:id="@+id/txt_sure_ped_tip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingVertical="@dimen/dp_30"
            android:text="确认密码"
            android:textColor="@color/home_333333"
            android:textSize="@dimen/sp_28"
            app:drawableEndCompat="@drawable/icon_must_input"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/view_line2" />

        <EditText
            android:id="@+id/edt_again_input_pwd"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_20"
            android:background="@null"
            android:gravity="start"
            android:hint="请再次输入新密码"
            android:paddingVertical="@dimen/dp_30"
            android:textColor="@color/home_333333"
            android:textSize="@dimen/sp_28"
            app:layout_constraintBaseline_toBaselineOf="@+id/txt_sure_ped_tip"
            app:layout_constraintEnd_toStartOf="@+id/img_pwd_again_clear"
            app:layout_constraintStart_toEndOf="@+id/txt_sure_ped_tip" />

        <ImageView
            android:id="@+id/img_pwd_again_clear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/dp_10"
            android:src="@drawable/search_close_edt"
            app:layout_constraintBottom_toBottomOf="@+id/edt_again_input_pwd"
            app:layout_constraintEnd_toStartOf="@+id/img_pwd_again_show"
            app:layout_constraintTop_toTopOf="@+id/edt_again_input_pwd" />

        <CheckBox
            android:id="@+id/img_pwd_again_show"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/dp_10"
            android:button="@drawable/login_password_look_selector"
            android:checked="true"
            app:layout_constraintBottom_toBottomOf="@+id/edt_again_input_pwd"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/edt_again_input_pwd" />

        <View
            android:id="@+id/view_line3"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/app_themes_f7f7f7"
            app:layout_constraintTop_toBottomOf="@+id/txt_sure_ped_tip" />

        <TextView
            android:id="@+id/txt_auth_code_tip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingVertical="@dimen/dp_30"
            android:text="验证码"
            android:textColor="@color/home_333333"
            android:textSize="@dimen/sp_28"
            app:drawableEndCompat="@drawable/icon_must_input"
            app:layout_constraintBaseline_toBaselineOf="@+id/edt_auth_code"
            app:layout_constraintStart_toStartOf="parent" />

        <EditText
            android:id="@+id/edt_auth_code"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_20"
            android:background="@null"
            android:hint="请输入验证码"
            android:inputType="number"
            android:maxLength="6"
            android:paddingVertical="@dimen/dp_30"
            android:singleLine="true"
            android:textColor="@color/home_333333"
            android:textSize="@dimen/sp_28"
            app:layout_constraintEnd_toStartOf="@+id/img_code_clear"
            app:layout_constraintStart_toEndOf="@+id/txt_sure_ped_tip"
            app:layout_constraintTop_toBottomOf="@+id/view_line3" />

        <ImageView
            android:id="@+id/img_code_clear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/dp_10"
            android:src="@drawable/search_close_edt"
            app:layout_constraintBottom_toBottomOf="@+id/txt_auth_code_tip"
            app:layout_constraintEnd_toStartOf="@+id/txt_get_auth_code"
            app:layout_constraintTop_toBottomOf="@+id/view_line3"
            app:layout_constraintTop_toTopOf="@+id/txt_auth_code_tip" />

        <TextView
            android:id="@+id/txt_get_auth_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="获取验证码"
            android:textColor="@color/red"
            android:textSize="@dimen/sp_28"
            app:layout_constraintBaseline_toBaselineOf="@+id/txt_auth_code_tip"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.hjq.shape.view.ShapeButton
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_100"
        android:layout_alignParentBottom="true"
        android:layout_gravity="center"
        android:layout_marginStart="@dimen/dp_20"
        android:layout_marginEnd="@dimen/dp_20"
        android:layout_marginBottom="40dp"
        android:layout_weight="1"
        android:gravity="center"
        android:shadowColor="@color/home_333333"
        android:text="确认修改"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_36"
        app:shape_radius="@dimen/sp_15"
        app:shape_solidColor="@color/red" />

</RelativeLayout>