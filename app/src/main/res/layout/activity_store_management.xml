<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/order_remark_F4F4F4"
    android:layout_height="match_parent">

    <com.hjq.bar.TitleBar

        android:id="@+id/TitleBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        app:layout_constraintTop_toTopOf="parent"
        app:leftIcon="@drawable/bar_arrows_left_black"
        app:lineVisible="false"
        app:rightTitleSize="@dimen/sp_36"
        app:title="门店管理"
        app:titleColor="@color/home_333333" />


        <androidx.recyclerview.widget.RecyclerView
            android:layout_marginTop="10dp"
            app:layout_constraintBottom_toTopOf="@+id/tv_newly_built_store"
            app:layout_constraintTop_toBottomOf="@+id/TitleBar"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            tools:listitem="@layout/item_store_managemnet"
            android:id="@+id/ryOrderLeft"
            android:layout_width="match_parent"
            android:layout_height="0dp" />

    <com.hjq.shape.view.ShapeButton
        android:id="@+id/tv_newly_built_store"
        android:layout_width="match_parent"
        android:textSize="16sp"
        app:shape_radius="10dp"
        android:layout_marginBottom="10dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_marginLeft="18dp"
        android:layout_marginRight="18dp"
        android:gravity="center"
        android:textColor="@color/white"
        android:text="新建门店"
        app:layout_constraintBottom_toBottomOf="parent"
        app:shape_solidColor="#FF4C4A"
        android:layout_height="wrap_content"/>
</androidx.constraintlayout.widget.ConstraintLayout>