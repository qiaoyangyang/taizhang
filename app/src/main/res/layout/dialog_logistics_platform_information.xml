<?xml version="1.0" encoding="utf-8"?>
<com.hjq.shape.layout.ShapeConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:shape_solidColor="@color/white"
    app:shape_topLeftRadius="@dimen/dp_24"
    app:shape_topRightRadius="@dimen/dp_24">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="填写物流平台信息"
        android:textColor="@color/home_333333"
        android:textSize="@dimen/sp_36"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iv_close_recharge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/tv_title"
        android:layout_alignBottom="@+id/tv_title"
        android:layout_alignParentEnd="true"
        android:paddingHorizontal="@dimen/dp_20"
        android:src="@drawable/search_close_edt"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_title" />

    <LinearLayout
        android:id="@+id/ll_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_30"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@+id/tv_title">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/logistics_business"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_32"
                android:layout_marginTop="@dimen/dp_36"
                android:layout_marginBottom="@dimen/dp_36"
                android:text="物流商"
                android:textColor="@color/home_333333"
                android:textSize="@dimen/sp_28"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:layout_marginRight="@dimen/dp_32"
                android:id="@+id/tv_logistics_business"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:textColor="@color/home_333333"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toRightOf="@+id/logistics_business"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:layout_marginLeft="@dimen/dp_32"
            android:layout_marginRight="@dimen/dp_32"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#F5F5F5"
            />
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/merchant_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_32"
                android:layout_marginTop="@dimen/dp_36"
                android:layout_marginBottom="@dimen/dp_36"
                android:text="物流商平台商户编号"
                android:textColor="@color/home_333333"
                android:textSize="@dimen/sp_28"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        <TextView
            android:textColor="@color/red"
            android:text="*"

            app:layout_constraintTop_toTopOf="@+id/merchant_code"
            app:layout_constraintLeft_toRightOf="@id/merchant_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

            <com.meiling.common.view.ClearEditText
                android:drawablePadding="5dp"
                android:maxEms="1"
                android:textColorHint="@color/home_999999"
                android:layout_marginLeft="10dp"
                android:background="@color/white"
                android:hint="请输入"
                android:layout_marginRight="@dimen/dp_32"
                android:id="@+id/tv_merchant_code"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:textColor="@color/home_333333"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toRightOf="@+id/merchant_code"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="MissingClass" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:layout_marginLeft="@dimen/dp_32"
            android:layout_marginRight="@dimen/dp_32"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#F5F5F5"
            app:layout_constraintBottom_toBottomOf="@+id/logistics_business" />
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/merchant_key"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_32"
                android:layout_marginTop="@dimen/dp_36"
                android:layout_marginBottom="@dimen/dp_36"
                android:text="物流商平台商户key"
                android:textColor="@color/home_333333"
                android:textSize="@dimen/sp_28"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        <TextView
            android:textColor="@color/red"
            android:text="*"

            app:layout_constraintTop_toTopOf="@+id/merchant_key"
            app:layout_constraintLeft_toRightOf="@id/merchant_key"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

            <com.meiling.common.view.ClearEditText
                android:drawablePadding="5dp"
                android:maxEms="1"
                android:textColorHint="@color/home_999999"
                android:layout_marginLeft="10dp"
                android:background="@color/white"
                android:hint="请输入"
                android:layout_marginRight="@dimen/dp_32"
                android:id="@+id/tv_merchant_key"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:textColor="@color/home_333333"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toRightOf="@+id/merchant_key"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:layout_marginLeft="@dimen/dp_32"
            android:layout_marginRight="@dimen/dp_32"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#F5F5F5"
            app:layout_constraintBottom_toBottomOf="@+id/logistics_business" />  <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView

                android:id="@+id/merchant_keys"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_32"
                android:layout_marginTop="@dimen/dp_36"
                android:layout_marginBottom="@dimen/dp_36"
                android:text="物流商平台商户密钥"
                android:textColor="@color/home_333333"
                android:textSize="@dimen/sp_28"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        <TextView
            android:textColor="@color/red"
            android:text="*"
            app:layout_constraintTop_toTopOf="@+id/merchant_keys"
            app:layout_constraintLeft_toRightOf="@id/merchant_keys"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

            <com.meiling.common.view.ClearEditText
                android:drawablePadding="5dp"
                android:maxEms="1"
                android:textColorHint="@color/home_999999"
                android:layout_marginLeft="10dp"
                android:background="@color/white"
                android:hint="请输入"
                android:layout_marginRight="@dimen/dp_32"
                android:id="@+id/tv_merchant_keys"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:textColor="@color/home_333333"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toRightOf="@+id/merchant_keys"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:layout_marginLeft="@dimen/dp_32"
            android:layout_marginRight="@dimen/dp_32"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#F5F5F5"
            />


    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="查看操作说明 > "
        android:textColor="@color/red"
        android:gravity="center"
        android:id="@+id/txtGoWeb"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@+id/ll_btn"
        app:layout_constraintBottom_toTopOf="@+id/btn_ok_select_time"/>

    <com.hjq.shape.view.ShapeButton
        android:layout_marginLeft="@dimen/dp_32"
        android:layout_marginRight="@dimen/dp_32"
        app:layout_constraintTop_toBottomOf="@+id/ll_btn"
        android:id="@+id/btn_ok_select_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginVertical="@dimen/dp_50"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingVertical="@dimen/dp_30"
        android:shadowColor="@color/home_666666"
        android:text="确定"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_32"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:shape_radius="@dimen/dp_16"
        app:shape_solidColor="@color/red" />

</com.hjq.shape.layout.ShapeConstraintLayout>