<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

   <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
       android:id="@+id/srf_data_dis"
       android:layout_width="match_parent"
       android:layout_height="match_parent">
       <androidx.core.widget.NestedScrollView
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:fillViewport="true">

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:orientation="vertical">

               <TextView
                   android:layout_width="84dp"
                   android:layout_height="20dp"
                   android:layout_marginHorizontal="@dimen/dp_20"
                   android:layout_marginVertical="@dimen/dp_20"
                   android:text="今日实时数据"
                   android:textColor="#ff333333"
                   android:textSize="@dimen/sp_28" />

               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:gravity="center"
                   android:orientation="horizontal"
                   android:paddingHorizontal="@dimen/dp_30"
                   >

                   <LinearLayout
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:layout_weight="1"
                       android:orientation="vertical">

                       <TextView
                           android:layout_width="wrap_content"
                           android:layout_height="20dp"
                           android:text="发单数量总计"
                           android:textColor="#ff333333"
                           android:textSize="@dimen/sp_28" />

                       <TextView
                           android:id="@+id/txt_sum_order_num"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:layout_marginVertical="@dimen/dp_20"
                           android:text="43186"
                           android:textColor="#ff333333"
                           android:textSize="24sp" />
                   </LinearLayout>

                   <LinearLayout
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:layout_weight="1"
                       android:orientation="vertical">

                       <TextView
                           android:layout_width="108dp"
                           android:layout_height="20dp"
                           android:text="配送费总计"
                           android:textColor="#ff333333"
                           android:textSize="@dimen/sp_28" />

                       <TextView
                           android:id="@+id/txt_sun_amount"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:layout_marginVertical="@dimen/dp_20"
                           android:text="245"
                           android:textColor="#ff333333"
                           android:textSize="24sp" />
                   </LinearLayout>

               </LinearLayout>

               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:gravity="center"
                   android:orientation="horizontal"
                   android:paddingHorizontal="@dimen/dp_30">

                   <LinearLayout
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:layout_weight="1"
                       android:orientation="vertical">

                       <TextView
                           android:layout_width="108dp"
                           android:layout_height="20dp"
                           android:text="小费总计"
                           android:textColor="#ff333333"
                           android:textSize="@dimen/sp_28" />

                       <TextView
                           android:id="@+id/txt_sum_tips"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:layout_marginVertical="@dimen/dp_20"
                           android:text="43186"
                           android:textColor="#ff333333"
                           android:textSize="24sp" />
                   </LinearLayout>

                   <LinearLayout
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:layout_weight="1"
                       android:orientation="vertical">

                       <TextView
                           android:layout_width="108dp"
                           android:layout_height="20dp"
                           android:text="费用总计"
                           android:textColor="#ff333333"
                           android:textSize="@dimen/sp_28" />

                       <TextView
                           android:id="@+id/txt_sum_amount_and_tips"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:layout_marginVertical="@dimen/dp_20"
                           android:text="2504"
                           android:textColor="#ff333333"
                           android:textSize="24sp" />
                   </LinearLayout>

               </LinearLayout>


               <com.hjq.shape.layout.ShapeLinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_marginHorizontal="@dimen/dp_20"
                   android:orientation="vertical"
                   android:paddingVertical="@dimen/dp_20"
                   app:shape_radius="@dimen/dp_20"
                   app:shape_solidColor="#F5F5F5">

                   <LinearLayout
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:layout_marginHorizontal="@dimen/dp_20"
                       android:layout_weight="1"
                       android:orientation="horizontal"
                       android:paddingHorizontal="@dimen/dp_30">


                       <TextView
                           android:layout_width="0dp"
                           android:layout_height="17dp"
                           android:layout_weight="1"
                           android:text="配送平台"
                           android:textColor="#ff777777"
                           android:textSize="12sp" />

                       <TextView
                           android:layout_width="0dp"
                           android:layout_height="17dp"
                           android:layout_weight="1"
                           android:text="发单数量"
                           android:textColor="#ff777777"
                           android:textSize="12sp" />

                       <TextView
                           android:layout_width="0dp"
                           android:layout_height="17dp"
                           android:layout_weight="1"
                           android:text="配送费"
                           android:textColor="#ff777777"
                           android:textSize="12sp" />

                       <TextView
                           android:layout_width="0dp"
                           android:layout_height="17dp"
                           android:layout_weight="1"
                           android:text="加小费"
                           android:textColor="#ff777777"
                           android:textSize="12sp" />


                       <TextView
                           android:layout_width="0dp"
                           android:layout_height="17dp"
                           android:layout_gravity="end"
                           android:layout_weight="1"
                           android:gravity="end"
                           android:text="客单价"
                           android:textColor="#ff777777"
                           android:textSize="12sp" />
                   </LinearLayout>

                   <androidx.recyclerview.widget.RecyclerView
                       android:id="@+id/rv_data_dis"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                       tools:listitem="@layout/item_data_dis" />
               </com.hjq.shape.layout.ShapeLinearLayout>

               <RelativeLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content">

                   <TextView
                       android:layout_width="84dp"
                       android:layout_height="20dp"
                       android:layout_marginHorizontal="@dimen/dp_20"
                       android:layout_marginVertical="@dimen/dp_20"
                       android:text="历史数据"
                       android:textColor="#ff333333"
                       android:textSize="@dimen/sp_28" />

                   <TextView
                       android:id="@+id/txt_data_history_channel_time"
                       android:layout_width="wrap_content"
                       android:layout_height="20dp"
                       android:layout_alignParentRight="true"
                       android:layout_marginVertical="@dimen/dp_20"
                       android:layout_marginEnd="@dimen/dp_20"
                       android:drawableEnd="@drawable/icon_next"
                       android:text="昨日"
                       android:textColor="#ff333333"
                       android:textSize="@dimen/sp_28" />
               </RelativeLayout>


               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:gravity="center"
                   android:orientation="horizontal"
                   android:paddingHorizontal="@dimen/dp_30"
                   >

                   <LinearLayout
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:layout_weight="1"
                       android:orientation="vertical">

                       <TextView
                           android:layout_width="wrap_content"
                           android:layout_height="20dp"
                           android:text="发单数量总计"
                           android:textColor="#ff333333"
                           android:textSize="@dimen/sp_28" />

                       <TextView
                           android:id="@+id/txt_his_sum_order_num"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:layout_marginVertical="@dimen/dp_20"
                           android:text="43186"
                           android:textColor="#ff333333"
                           android:textSize="24sp" />
                   </LinearLayout>

                   <LinearLayout
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:layout_weight="1"
                       android:orientation="vertical">

                       <TextView
                           android:layout_width="108dp"
                           android:layout_height="20dp"
                           android:text="配送费总计"
                           android:textColor="#ff333333"
                           android:textSize="@dimen/sp_28" />

                       <TextView
                           android:id="@+id/txt_his_sun_amount"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:layout_marginVertical="@dimen/dp_20"
                           android:text="245"
                           android:textColor="#ff333333"
                           android:textSize="24sp" />
                   </LinearLayout>

               </LinearLayout>

               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:gravity="center"
                   android:orientation="horizontal"
                   android:paddingHorizontal="@dimen/dp_30">

                   <LinearLayout
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:layout_weight="1"
                       android:orientation="vertical">

                       <TextView
                           android:layout_width="108dp"
                           android:layout_height="20dp"
                           android:text="小费总计"
                           android:textColor="#ff333333"
                           android:textSize="@dimen/sp_28" />

                       <TextView
                           android:id="@+id/txt_his_sum_tips"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:layout_marginVertical="@dimen/dp_20"
                           android:text="43186"
                           android:textColor="#ff333333"
                           android:textSize="24sp" />
                   </LinearLayout>

                   <LinearLayout
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:layout_weight="1"
                       android:orientation="vertical">

                       <TextView
                           android:layout_width="108dp"
                           android:layout_height="20dp"
                           android:text="费用总计"
                           android:textColor="#ff333333"
                           android:textSize="@dimen/sp_28" />

                       <TextView
                           android:id="@+id/txt_his_sum_amount_and_tips"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:layout_marginVertical="@dimen/dp_20"
                           android:text="2504"
                           android:textColor="#ff333333"
                           android:textSize="24sp" />
                   </LinearLayout>

               </LinearLayout>

               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:gravity="center"
                   android:orientation="horizontal"
                   android:paddingHorizontal="@dimen/dp_30"
                   android:paddingVertical="@dimen/dp_20">

                   <LinearLayout
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:layout_weight="1"
                       android:orientation="vertical">

                       <TextView
                           android:layout_width="108dp"
                           android:layout_height="20dp"
                           android:text="客单价"
                           android:textColor="#ff333333"
                           android:textSize="@dimen/sp_28" />

                       <TextView
                           android:id="@+id/txt_his_avgAmount"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:layout_marginVertical="@dimen/dp_20"
                           android:text="43186"
                           android:textColor="#ff333333"
                           android:textSize="24sp" />
                   </LinearLayout>

                   <LinearLayout
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:layout_weight="1"
                       android:orientation="vertical">


                   </LinearLayout>

               </LinearLayout>
           </LinearLayout>
       </androidx.core.widget.NestedScrollView>
   </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
</LinearLayout>







