<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:layout_marginHorizontal="@dimen/dp_20"
    android:gravity="center">

    <RelativeLayout
        android:id="@+id/rlSelect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:background="@drawable/order_bg_dis_rv"
        android:gravity="center">


        <ImageView
            android:id="@+id/imgSelectIcon"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginStart="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_marginEnd="@dimen/dp_10"
            android:visibility="gone"
            android:layout_marginBottom="@dimen/dp_10"
            android:src="@mipmap/icon_dis_shunfeng" />

        <TextView
            android:id="@+id/txt_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_16"
            android:layout_marginStart="5dp"
            android:layout_centerHorizontal="true"
            android:gravity="center_vertical"
            android:textColor="@color/home_666666"
            android:textSize="@dimen/sp_22"
            tools:text="顺丰同城" />

        <TextView
            android:id="@+id/txt_money_tip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/txt_money"
            android:layout_toStartOf="@+id/txt_money"
            android:gravity="center"
            android:maxLines="1"
            android:text="¥"
            android:visibility="gone"
            android:textColor="@color/home_999999"
            android:textSize="@dimen/sp_24" />

        <TextView
            android:id="@+id/txt_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_name"
            android:layout_marginVertical="@dimen/dp_12"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:maxLines="1"
            android:text="1"
            android:textColor="@color/home_333333"
            android:textSize="@dimen/sp_32" />

        <TextView
            android:id="@+id/txt_discount_money"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_money"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/dp_16"
            android:layout_marginHorizontal="@dimen/dp_2"
            android:gravity="center"
            android:maxLines="1"
            android:ellipsize="end"
            android:paddingStart="@dimen/dp_10"
            tools:text="已减120.00元"
            android:visibility="invisible"
            android:textColor="@color/home_666666"
            android:textSize="@dimen/sp_20" />
    </RelativeLayout>

    <TextView
        android:id="@+id/txtTip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/dp_2"
        android:gravity="center"
        android:ellipsize="end"
        android:maxLines="2"
        android:paddingVertical="@dimen/dp_5"
        android:text="手机号格式异常手机号格式异常手机号格式异常"
        android:textColor="@color/red_FF4C4A"
        android:textSize="@dimen/sp_22" />
</LinearLayout>
