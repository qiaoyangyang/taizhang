<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/order_remark_F4F4F4"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cos_title"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/red"
        android:paddingBottom="@dimen/dp_20">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/img_recharge_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/icon_back"
            app:layout_constraintBaseline_toBaselineOf="@+id/txt_title"
            app:layout_constraintStart_toStartOf="parent" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txt_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="小喵钱包"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_36"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.hjq.shape.layout.ShapeLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/my_recharge_bg_red"
        app:shape_bottomLeftRadius="@dimen/dp_20"
        app:shape_bottomRightRadius="@dimen/dp_20">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/dp_20"
            android:layout_marginBottom="@dimen/dp_20"
            android:background="@drawable/scan_bg_input">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/txt_balance_tip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingVertical="@dimen/dp_20"
                android:text="当前余额（元）"
                android:textColor="#ff999999"
                android:textSize="12sp"
                app:layout_constraintEnd_toEndOf="@+id/guideline"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/txt_balance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingTop="@dimen/dp_10"
                android:textColor="@color/home_333333"
                android:textSize="@dimen/sp_48"
                app:layout_constraintEnd_toEndOf="@+id/txt_balance_tip"
                app:layout_constraintStart_toStartOf="@+id/txt_balance_tip"
                app:layout_constraintTop_toBottomOf="@+id/txt_balance_tip"
                tools:text="12" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/txt_freeze_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="已冻结"
                android:textColor="@color/home_333333"
                android:textSize="@dimen/sp_18"
                app:layout_constraintEnd_toEndOf="@+id/txt_balance_tip"
                app:layout_constraintStart_toStartOf="@+id/txt_balance_tip"
                app:layout_constraintTop_toBottomOf="@+id/txt_balance" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.5" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/txt_service_tip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingVertical="@dimen/dp_20"
                android:text="发单服务费（元）"
                android:textColor="#ff999999"
                android:textSize="12sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/guideline"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/txt_service_fee"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingVertical="@dimen/dp_10"
                android:textColor="@color/home_333333"
                android:textSize="@dimen/sp_48"
                app:layout_constraintEnd_toEndOf="@+id/txt_service_tip"
                app:layout_constraintStart_toStartOf="@+id/txt_service_tip"
                app:layout_constraintTop_toBottomOf="@+id/txt_service_tip"
                tools:text="12" />

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="/单"
                android:textColor="@color/home_333333"
                android:textSize="@dimen/sp_20"
                app:layout_constraintBaseline_toBaselineOf="@+id/txt_service_fee"
                app:layout_constraintStart_toEndOf="@+id/txt_service_fee" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_recharge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="@dimen/dp_20"
                android:background="@drawable/order_search_bg_button_red"
                android:paddingHorizontal="@dimen/dp_120"
                android:text="充值"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_38"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txt_freeze_amount" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.hjq.shape.layout.ShapeLinearLayout>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="@dimen/dp_40"
        android:background="@color/white"
        android:orientation="vertical"
        android:paddingHorizontal="@dimen/dp_20"
        android:paddingVertical="@dimen/dp_25">

        <com.angcyo.tablayout.DslTabLayout
            android:id="@+id/tab_layout"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:tab_deselect_color="@color/order_9b9b9b"
            app:tab_divider_margin_top="@dimen/dp_10"
            app:tab_draw_indicator="true"
            app:tab_enable_gradient_scale="false"
            app:tab_enable_text_bold="true"
            app:tab_indicator_color="@color/red"
            app:tab_indicator_drawable="@drawable/indicator_bottom_line_1"
            app:tab_indicator_enable_flow="true"
            app:tab_indicator_height="@dimen/dp_5"
            app:tab_indicator_solid_color="@color/red"
            app:tab_indicator_style="STYLE_BOTTOM"
            app:tab_indicator_width="30dp"
            app:tab_item_is_equ_width="true"
            app:tab_select_color="@color/home_333333">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingBottom="@dimen/dp_10"
                android:text="财务结算"
                android:textColor="@color/order_9b9b9b"
                android:textSize="@dimen/sp_36" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingBottom="@dimen/dp_10"
                android:text="充值记录"
                android:textColor="@color/order_9b9b9b"
                android:textSize="@dimen/sp_36" />


        </com.angcyo.tablayout.DslTabLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_2"
            android:layout_marginVertical="@dimen/dp_20"
            android:background="@drawable/order_change_bg_f4f4" />

        <RadioGroup
            android:id="@+id/radio_group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/radio_button1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/dp_20"
                android:layout_weight="1"
                android:background="@drawable/checkbox_normal"
                android:button="@null"
                android:checked="true"
                android:gravity="center"
                android:paddingHorizontal="@dimen/dp_20"
                android:paddingVertical="@dimen/dp_15"
                android:text="近7天"
                android:textColor="@color/radio_button_text_color_selector" />

            <RadioButton
                android:id="@+id/radio_button2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/dp_20"
                android:layout_weight="1"
                android:background="@drawable/checkbox_normal"
                android:button="@null"
                android:gravity="center"
                android:paddingHorizontal="@dimen/dp_20"
                android:paddingVertical="@dimen/dp_15"
                android:text="近30天"
                android:textColor="@color/radio_button_text_color_selector" />

            <RadioButton
                android:id="@+id/radio_button3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/checkbox_normal"
                android:button="@null"
                android:gravity="center"
                android:paddingHorizontal="@dimen/dp_20"
                android:paddingVertical="@dimen/dp_15"
                android:text="近90天"
                android:textColor="@color/radio_button_text_color_selector" />

            <RadioButton
                android:id="@+id/radio_button4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/dp_20"
                android:layout_weight="1"
                android:background="@drawable/checkbox_normal"
                android:button="@null"
                android:gravity="center"
                android:paddingHorizontal="@dimen/dp_20"
                android:paddingVertical="@dimen/dp_15"
                android:text="自定义"
                android:textColor="@color/radio_button_text_color_selector" />


        </RadioGroup>


    </androidx.appcompat.widget.LinearLayoutCompat>

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/view_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</androidx.appcompat.widget.LinearLayoutCompat>