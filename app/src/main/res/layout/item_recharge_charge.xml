<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/order_remark_F4F4F4">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/dp_20"
        android:layout_marginVertical="@dimen/dp_10"
        android:background="@drawable/scan_bg_input"
        android:paddingHorizontal="@dimen/dp_20"
        android:paddingVertical="@dimen/dp_20">

        <TextView
            android:id="@+id/txt_day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="26"
            android:textColor="@color/home_333333"
            android:textSize="16sp"
            app:layout_constraintBaseline_toBaselineOf="@+id/txt_service_charge_name"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/txt_service_charge_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="@dimen/dp_20"
            android:gravity="center"
            tools:text="技术服务费结算"
            android:textColor="@color/home_333333"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="@+id/txt_service_charge_money"
            app:layout_constraintStart_toStartOf="@+id/txt_day"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/txt_service_charge_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="@dimen/dp_10"
            tools:text="3笔"
            android:textColor="@color/home_666666"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="@+id/txt_service_charge_money"
            app:layout_constraintStart_toStartOf="@+id/txt_day"
            app:layout_constraintTop_toBottomOf="@+id/txt_service_charge_name" />

        <TextView
            android:id="@+id/txt_month"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2月"
            android:textColor="@color/home_333333"
            android:textSize="16sp"
            app:layout_constraintBaseline_toBaselineOf="@+id/txt_service_charge_num"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/txt_service_charge_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableEnd="@drawable/icon_next"
            tools:text="-0.6"
            android:textColor="@color/home_333333"
            android:textSize="@dimen/sp_32"
            app:layout_constraintBottom_toBottomOf="@+id/txt_service_charge_num"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/txt_service_charge_name" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.appcompat.widget.LinearLayoutCompat>

