<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/bg_set"
        android:layout_width="460dp"
        android:layout_height="110dp"
        android:layout_alignParentEnd="true"
        android:background="@color/white">


        <ImageView
            android:id="@+id/icon"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginStart="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_20" />

        <ImageView
            android:id="@+id/closeMsg"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="-30dp"
            android:scaleType="center"
            android:src="@drawable/search_close_edt" />

        <TextView
            android:id="@+id/tvMsgTotal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_toStartOf="@+id/closeMsg"
            android:paddingStart="@dimen/dp_10"
            android:paddingEnd="@dimen/dp_10"
            android:text="x 3"
            android:textColor="@color/white"
            android:visibility="gone" />


        <TextView
            android:id="@+id/tvMsg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_toEndOf="@+id/icon"
            android:text="新订单来了"
            android:textColor="@color/black"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tvOrderMsg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvMsg"
            android:layout_marginStart="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_toEndOf="@+id/icon"
            android:singleLine="true"
            android:text="新订单来了#1111"
            android:textColor="@color/home_333333"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tvMsgShow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvOrderMsg"
            android:layout_marginStart="@dimen/dp_20"
            android:layout_marginTop="5dp"
            android:layout_toEndOf="@+id/icon"
            android:text="收件信息："
            android:textSize="11sp" />

        <TextView
            android:id="@+id/tvReceiveMsg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvOrderMsg"
            android:layout_marginStart="@dimen/dp_10"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="@dimen/dp_10"
            android:layout_toEndOf="@+id/tvMsgShow"
            android:singleLine="true"
            android:text="法外狂徒， 11111111111"
            android:textSize="11sp" />

        <TextView
            android:id="@+id/tvCloseAll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/tvOrderMsg"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/dp_10"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:paddingHorizontal="8dp"
            android:paddingVertical="5dp"
            android:text="全部关闭"
            android:textColor="@color/red"
            android:textSize="8sp" />


    </RelativeLayout>
</RelativeLayout>
