<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cos"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginVertical="@dimen/dp_20"
        android:layout_marginStart="@dimen/dp_32"
        android:textColor="@color/home_666666"
        android:textSize="@dimen/sp_28"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/txt_play_num"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:text="新订单"
            android:textColor="@color/home_666666"
            android:textSize="@dimen/sp_28"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/txt_time_setting"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:paddingHorizontal="@dimen/dp_20"
            android:text="设置时长"
            android:textColor="@color/order_dis_5498FE"
            android:textSize="@dimen/sp_28"
            android:visibility="gone"
            app:layout_constraintLeft_toRightOf="@+id/tv_name"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/txt_yu_name"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:maxLines="2"
            android:ellipsize="end"
            android:paddingVertical="@dimen/dp_10"
            android:text="预定单距离收货时间120分钟时，提醒"
            android:textColor="@color/home_666666"
            android:textSize="@dimen/sp_24"
            android:visibility="gone"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_name" />
        <TextView
            android:id="@+id/txt_dis_name"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:maxLines="1"
            android:paddingVertical="@dimen/dp_10"
            android:text="发起配送15分钟无配送员/快递员接单，提醒"
            android:textColor="@color/home_666666"
            android:textSize="@dimen/sp_24"
            android:visibility="gone"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_name" />

    </androidx.constraintlayout.widget.ConstraintLayout>


    <TextView
        android:id="@+id/txt_play_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/dp_44"
        android:paddingVertical="@dimen/dp_30"
        android:text="播放一次"
        android:textColor="@color/home_333333"
        android:textSize="@dimen/sp_28"
        app:drawableEndCompat="@drawable/icon_next"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/view_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/order_remark_F4F4F4"
        app:layout_constraintTop_toBottomOf="@+id/txt_play_num" />

</androidx.constraintlayout.widget.ConstraintLayout>