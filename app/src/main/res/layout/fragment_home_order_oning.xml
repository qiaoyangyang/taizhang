<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_my"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_100"
        android:background="@color/white">

        <LinearLayout
            android:id="@+id/ll_select_store"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_20"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/ll_search"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/txt_select_store"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:singleLine="true"
                android:marqueeRepeatLimit="marquee_forever"
                android:ellipsize="marquee"
                android:scrollHorizontally="true"
                android:focusableInTouchMode="true"
                android:focusable="true"
                android:text="全部门店"
                app:drawableEndCompat="@drawable/icon_home_next" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingHorizontal="@dimen/dp_20"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/img_order_screen"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="center"
                android:src="@drawable/icon_order_screen" />

            <ImageView
                android:id="@+id/img_search_order"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="center"
                android:paddingHorizontal="@dimen/dp_10"
                android:src="@drawable/icon_order_search" />

            <ImageView
                android:id="@+id/img_create_order"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="center"
                android:src="@drawable/icon_order_add" />

        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
<View
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_2"
    android:background="@color/account_F5F5F5" />
    <com.angcyo.tablayout.DslTabLayout
        android:id="@+id/tab_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_home_order_tab"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tab_deselect_color="@color/home_A8ABB2"
        app:tab_draw_badge="true"
        android:paddingTop="@dimen/dp_40"
        android:paddingBottom="@dimen/dp_15"
        app:tab_draw_indicator="true"
        app:tab_indicator_color="@color/red"
        app:tab_indicator_enable_flow="true"
        app:tab_indicator_height="@dimen/dp_5"
        app:tab_enable_gradient_text_size="false"

        app:tab_indicator_solid_color="@color/white"
        app:tab_indicator_style="STYLE_BOTTOM"
        app:tab_indicator_width="30dp"
        app:tab_badge_gravity="center"
        app:tab_badge_text_size="@dimen/sp_30"
        app:tab_badge_solid_color="@color/white"
        app:tab_badge_text_color="@color/red"
        app:tab_item_is_equ_width="true"
        app:tab_indicator_y_offset="@dimen/dp_15"
        app:tab_select_color="@color/home_333333">

        <TextView
            android:paddingBottom="@dimen/dp_10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="待配送"
            />

        <TextView
            android:paddingBottom="@dimen/dp_10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="待抢单"
            />

        <TextView
            android:paddingBottom="@dimen/dp_10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="待取货"

            />

        <TextView
            android:paddingBottom="@dimen/dp_10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="配送中"

            />

        <TextView
            android:paddingBottom="@dimen/dp_10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="取消"
            />

        <TextView
            android:paddingBottom="@dimen/dp_10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:maxLines="1"
            android:text="已送达"
            tools:ignore="RtlSymmetry"
            />

    </com.angcyo.tablayout.DslTabLayout>

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/view_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/home_B3B3B3" />

</androidx.appcompat.widget.LinearLayoutCompat>