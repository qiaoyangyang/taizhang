<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_themes_f7f7f7">

    <com.hjq.bar.TitleBar
        android:id="@+id/TitleBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/red"
        app:layout_constraintTop_toTopOf="parent"
        app:leftIcon="@drawable/bar_arrows_left_white"
        app:lineVisible="false"
        app:rightTitleSize="@dimen/sp_36"
        app:title="小喵钱包"
        app:titleColor="@color/white" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:layout_above="@+id/ll_btn"
        android:layout_below="@+id/TitleBar">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.hjq.shape.layout.ShapeRelativeLayout
                android:id="@+id/srl_pay_away"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/dp_20"
                android:layout_marginVertical="@dimen/dp_20"
                android:paddingHorizontal="@dimen/dp_20"
                app:shape_radius="@dimen/dp_20"
                app:shape_solidColor="@color/white">


                <TextView
                    android:id="@+id/tv_recharge_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txt_recharge_other"
                    android:gravity="center"
                    android:paddingVertical="@dimen/dp_24"
                    android:text="充值方式"
                    android:textColor="@color/home_333333"
                    android:textSize="@dimen/sp_32" />

                <ImageView
                    android:id="@+id/icon_wx_tip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_recharge_type"
                    android:paddingVertical="@dimen/dp_20"
                    android:paddingStart="@dimen/dp_20"
                    android:src="@drawable/icon_rech_wexin"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/txt_weixin_pay"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_recharge_type"
                    android:layout_marginHorizontal="@dimen/dp_20"
                    android:layout_toEndOf="@+id/icon_wx_tip"
                    android:drawablePadding="@dimen/dp_20"
                    android:gravity="start|center_vertical"
                    android:paddingVertical="@dimen/dp_30"
                    android:text="微信"
                    android:textColor="@color/home_666666"
                    android:textSize="@dimen/sp_32"
                    android:visibility="gone"
                    app:drawableEndCompat="@drawable/ic_spu_true" />

                <ImageView
                    android:id="@+id/icon_zfb_tip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/icon_wx_tip"
                    android:paddingVertical="@dimen/dp_20"
                    android:paddingStart="@dimen/dp_20"
                    android:src="@drawable/icon_rech_ali_pay" />

                <TextView
                    android:id="@+id/txt_ali_pay"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/icon_wx_tip"
                    android:layout_marginHorizontal="@dimen/dp_20"
                    android:layout_toEndOf="@+id/icon_zfb_tip"
                    android:drawablePadding="@dimen/dp_20"
                    android:gravity="start|center_vertical"
                    android:paddingVertical="@dimen/dp_30"
                    android:text="支付宝"
                    android:textColor="@color/home_666666"
                    android:textSize="@dimen/sp_32"
                    app:drawableEndCompat="@drawable/ic_spu_true" />


            </com.hjq.shape.layout.ShapeRelativeLayout>

            <com.hjq.shape.layout.ShapeRelativeLayout
                android:id="@+id/stl_pay_money"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/dp_20"
                android:layout_marginVertical="@dimen/dp_20"
                android:paddingHorizontal="@dimen/dp_20"
                app:shape_radius="@dimen/dp_20"
                app:shape_solidColor="@color/white">

                <TextView
                    android:id="@+id/tv_recharge_tip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/dp_10"
                    android:gravity="center"
                    android:paddingVertical="@dimen/dp_24"
                    android:text="充值金额"
                    android:textColor="@color/home_333333"
                    android:textSize="@dimen/sp_32" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_recharge"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_recharge_tip"
                    android:orientation="vertical"
                    android:paddingBottom="@dimen/dp_20"
                    app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
                    app:spanCount="2"
                    tools:itemCount="6"
                    tools:listitem="@layout/item_recy_recharge_to_pay" />

            </com.hjq.shape.layout.ShapeRelativeLayout>

            <com.hjq.shape.layout.ShapeLinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/dp_20"
                android:layout_marginVertical="@dimen/dp_20"
                android:orientation="horizontal"
                android:paddingHorizontal="@dimen/dp_20"
                android:paddingVertical="@dimen/dp_30"
                app:shape_radius="@dimen/dp_20"
                app:shape_solidColor="@color/white">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="金额（元）"
                    android:textColor="@color/home_666666"
                    android:textSize="@dimen/sp_32" />


                <EditText
                    android:id="@+id/txt_recharge_other"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="@dimen/dp_20"
                    android:background="@null"
                    android:hint="请输入其他金额"
                    android:inputType="number"
                    android:maxLength="6"
                    android:singleLine="true"
                    android:textColor="@color/home_333333"
                    android:textSize="@dimen/dp_28" />

            </com.hjq.shape.layout.ShapeLinearLayout>
        </androidx.appcompat.widget.LinearLayoutCompat>
    </androidx.core.widget.NestedScrollView>

    <LinearLayout
        android:id="@+id/ll_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:background="@color/white"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingVertical="@dimen/dp_30"
       >


        <com.hjq.shape.view.ShapeButton
            android:id="@+id/btn_cancel_recharge"
            android:layout_width="140dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/dp_20"
            android:layout_marginEnd="@dimen/dp_20"
            android:layout_weight="1"
            android:background="@drawable/order_bg_red"
            android:gravity="center"
            android:shadowColor="@color/home_666666"
            android:text="取消"
            android:textColor="@color/red"
            android:textSize="@dimen/sp_32"
            app:shape_radius="@dimen/sp_15"
            app:shape_solidColor="@color/white"
            app:shape_strokeColor="@color/red"
            app:shape_strokeWidth="@dimen/dp_1" />

        <com.hjq.shape.view.ShapeButton
            android:id="@+id/btn_ok_recharge"
            android:layout_width="140dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/dp_20"
            android:layout_marginEnd="@dimen/dp_20"
            android:layout_weight="1"
            android:gravity="center"
            android:shadowColor="@color/home_666666"
            android:text="确定"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_32"
            app:shape_radius="@dimen/sp_15"
            app:shape_solidColor="@color/red" />
    </LinearLayout>

</RelativeLayout>