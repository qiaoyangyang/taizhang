<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_themes_f7f7f7"
    android:orientation="vertical">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/txt_order_dis_add_tip"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/app_themes_1f2333"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/in_send_dis_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@mipmap/icon_back"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="加小费"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_32"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/txt_order_dis_add_tip"
        android:fillViewport="true">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp_20"
                android:background="@drawable/scan_bg_input"
                android:padding="@dimen/dp_20"
                app:layout_constraintTop_toBottomOf="@+id/txt_order_dis">

                <ImageView
                    android:id="@+id/img_dis"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:scaleType="center"
                    android:src="@drawable/order_dis_rec_icon" />

                <TextView
                    android:id="@+id/txt_order_dis_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/img_dis"
                    android:layout_alignBottom="@+id/img_dis"
                    android:layout_marginHorizontal="@dimen/sp_20"
                    android:layout_toEndOf="@+id/img_dis"
                    android:gravity="center"
                    android:textColor="@color/home_666666"
                    android:textSize="@dimen/sp_36"
                    android:textStyle="bold"
                    tools:text="李" />

                <TextView
                    android:id="@+id/txt_order_dis_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/img_dis"
                    android:layout_alignBottom="@+id/img_dis"
                    android:layout_toEndOf="@+id/txt_order_dis_name"
                    android:gravity="center"
                    android:textColor="@color/home_666666"
                    android:textSize="@dimen/sp_20"
                    tools:text="188****8888" />

                <TextView
                    android:id="@+id/txt_order_dis_address"
                    android:layout_width="299dp"
                    android:layout_height="40dp"
                    android:layout_below="@+id/txt_order_dis_name"
                    android:layout_alignLeft="@+id/txt_order_dis_name"
                    android:layout_marginBottom="@dimen/dp_50"
                    android:textColor="@color/home_666666"
                    android:textSize="@dimen/sp_28"
                    tools:text="内蒙古自治区鄂尔多斯市伊金霍洛旗伊金霍洛旗札萨克物流园区 14 幢 158 室" />


                <ImageView
                    android:id="@+id/view_line"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_above="@+id/img_dis_receive"
                    android:layout_below="@+id/img_dis"
                    android:layout_alignStart="@+id/img_dis"
                    android:layout_alignEnd="@+id/img_dis"
                    android:src="@mipmap/order_line" />

                <ImageView
                    android:id="@+id/img_dis_receive"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_below="@+id/txt_order_dis_address"
                    android:scaleType="center"
                    android:src="@drawable/order_dis_shou_icon" />

                <TextView
                    android:id="@+id/txt_order_dis_rec_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/img_dis_receive"
                    android:layout_alignBottom="@+id/img_dis_receive"
                    android:layout_marginHorizontal="@dimen/sp_20"
                    android:layout_toEndOf="@+id/img_dis_receive"
                    android:gravity="center"
                    android:textColor="@color/home_666666"
                    android:textSize="@dimen/sp_36"
                    android:textStyle="bold"
                    tools:text="李" />

                <TextView
                    android:id="@+id/txt_order_dis_rec_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/img_dis_receive"
                    android:layout_alignBottom="@+id/img_dis_receive"
                    android:layout_toEndOf="@+id/txt_order_dis_rec_name"
                    android:gravity="center"
                    android:textColor="@color/home_666666"
                    android:textSize="@dimen/sp_20"
                    tools:text="188****8888" />

                <TextView
                    android:id="@+id/txt_order_dis_rec_address"
                    android:layout_width="299dp"
                    android:layout_height="40dp"
                    android:layout_below="@+id/txt_order_dis_rec_name"
                    android:layout_alignLeft="@+id/txt_order_dis_rec_name"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:textColor="#ff666666"
                    android:textSize="@dimen/sp_28"
                    tools:text="内蒙古自治区鄂尔多斯市伊金霍洛旗伊金霍洛旗札萨克物流园区 14 幢 158 室" />

            </RelativeLayout>


            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp_20"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txt_app_tip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingVertical="@dimen/dp_20"
                    android:text="抢单平台"
                    android:textColor="@color/home_333333"
                    android:textSize="@dimen/sp_32"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_platform"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/scan_bg_input"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    app:layout_constraintTop_toBottomOf="@+id/txt_app_tip"
                    tools:listitem="@layout/item_recy_distribution_add_tip" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp_20"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingVertical="@dimen/dp_20"
                    android:text="增加更多平台发起配送"
                    android:textColor="@color/home_333333"
                    android:textSize="@dimen/sp_32" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_logistics_platform"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/scan_bg_input"
                    app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
                    app:spanCount="3"
                    tools:listitem="@layout/item_dis_send" />
            </androidx.appcompat.widget.LinearLayoutCompat>

        </androidx.appcompat.widget.LinearLayoutCompat>
    </androidx.core.widget.NestedScrollView>

    <com.hjq.shape.view.ShapeButton
        android:id="@+id/btn_cancel_order"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="@dimen/dp_20"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingVertical="@dimen/dp_20"
        android:text="取消配送"
        android:textColor="@color/red"
        android:textSize="@dimen/sp_36"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:shape_radius="@dimen/dp_100"
        app:shape_strokeColor="@color/red"
        app:shape_strokeWidth="@dimen/dp_2" />
</RelativeLayout>