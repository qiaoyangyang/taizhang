<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/order_remark_F4F4F4"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <com.hjq.bar.TitleBar
        style="@style/TitleBar_white"
        app:layout_constraintLeft_toLeftOf="parent"
        android:id="@+id/TitleBar"
        app:layout_constraintTop_toTopOf="parent"
        app:lineVisible="false"
        app:rightTitleSize="@dimen/sp_14"
        app:title="核销详情"
        />

    <com.hjq.shape.layout.ShapeConstraintLayout
        android:id="@+id/shapecl"
        android:paddingTop="16dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        app:layout_constraintTop_toBottomOf="@+id/TitleBar"
        app:shape_solidColor="@color/white"
        app:shape_radius="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            app:layout_constraintLeft_toLeftOf="parent"
            android:textSize="16sp"
            android:textColor="#2B2A2A"
            android:id="@+id/tv_name"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:textSize="@dimen/sp_28"
            android:textColor="#666666"
            android:id="@+id/order_price"
            android:layout_marginTop="@dimen/dp_26"
            app:layout_constraintLeft_toLeftOf="@+id/tv_name"
            android:text="订单价格："
            app:layout_constraintTop_toBottomOf="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView

            android:id="@+id/tv_dealValue"
            android:textSize="@dimen/sp_32"
            android:text=""
            app:layout_constraintBottom_toBottomOf="@+id/order_price"
            app:layout_constraintRight_toRightOf="parent"
            android:textColor="#999999"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tv_couponBuyPrice"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toLeftOf="@+id/tv_dealValue"
            app:layout_constraintBottom_toBottomOf="@+id/tv_dealValue"
            android:textSize="@dimen/sp_32"
            android:textColor="#FF4C4A"
            android:text=""
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:textSize="@dimen/sp_28"
            android:id="@+id/couponCode"
            android:layout_marginTop="9dp"
            app:layout_constraintLeft_toLeftOf="@+id/order_price"
            android:textColor="#666666"
            android:text="券码编号："
            app:layout_constraintTop_toBottomOf="@+id/order_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView

            android:id="@+id/tv_couponCode"
            android:textSize="@dimen/dp_28"
            android:text=""
            app:layout_constraintBottom_toBottomOf="@+id/couponCode"
            app:layout_constraintRight_toRightOf="parent"
            android:textColor="#333333"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:textSize="@dimen/sp_28"
            android:id="@+id/type"
            android:layout_marginTop="9dp"
            android:text="券码类型："
            app:layout_constraintTop_toBottomOf="@+id/couponCode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView

            android:id="@+id/tv_type"
            android:textSize="@dimen/sp_28"
            android:text=""
            app:layout_constraintBottom_toBottomOf="@+id/type"
            app:layout_constraintRight_toRightOf="parent"
            android:textColor="#333333"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:textSize="@dimen/sp_28"
            android:id="@+id/couponUseTime"
            android:layout_marginTop="9dp"
            android:text="核销时间："
            app:layout_constraintTop_toBottomOf="@+id/type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView

            android:id="@+id/tv_couponUseTime"
            android:textSize="@dimen/sp_28"
            android:text=""
            app:layout_constraintBottom_toBottomOf="@+id/couponUseTime"
            app:layout_constraintRight_toRightOf="parent"
            android:textColor="#333333"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:textSize="@dimen/sp_28"
            android:id="@+id/orderId"
            android:layout_marginTop="9dp"
            android:text="订单编号："
            app:layout_constraintTop_toBottomOf="@+id/couponUseTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView

            android:id="@+id/tv_orderId"
            android:textSize="@dimen/sp_28"
            android:text=""
            app:layout_constraintBottom_toBottomOf="@+id/orderId"
            app:layout_constraintRight_toRightOf="parent"
            android:textColor="#333333"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <View
            android:id="@+id/View_lin"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/orderId"
            android:background="#F4F4F4"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>
        <com.hjq.shape.view.ShapeTextView
            android:textSize="12sp"
            android:id="@+id/tv_status"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:paddingBottom="2dp"
            android:paddingTop="2dp"
            app:shape_radius="5dp"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp"
            android:text="已核销"
            android:layout_width="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/View_lin"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tv_shopName"
            android:textColor="#999999"
            android:textSize="12sp"
            android:maxLines="1"
            android:layout_marginRight="16dp"
            android:layout_marginLeft="10dp"
            app:layout_constraintLeft_toRightOf="@+id/tv_status"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBaseline_toBaselineOf="@+id/tv_status"
            android:layout_width="0dp"
            android:text="由浮光之丘MoonCake SKP 店"
            android:layout_height="wrap_content"/>


    </com.hjq.shape.layout.ShapeConstraintLayout>
    <com.hjq.shape.layout.ShapeRecyclerView
        android:id="@+id/mei_recyclerView"
        android:padding="16dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/shapecl"
        app:shape_radius="12dp"
        app:shape_solidColor="@color/white"
        app:layout_constraintLeft_toLeftOf="@+id/shapecl"
        app:layout_constraintRight_toRightOf="@+id/shapecl"
        android:layout_width="0dp"
        android:layout_height="wrap_content">

    </com.hjq.shape.layout.ShapeRecyclerView>
    <com.hjq.shape.view.ShapeButton
        android:id="@+id/tv_ok"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:textSize="16sp"
        app:shape_radius="10dp"
        android:layout_marginBottom="10dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_marginLeft="18dp"
        android:layout_marginRight="18dp"
        android:gravity="center"
        android:textColor="@color/white"
        android:text="撤销核销"
        app:layout_constraintBottom_toBottomOf="parent"
        app:shape_solidColor="#FF4C4A"
        android:layout_height="wrap_content"/>
</androidx.constraintlayout.widget.ConstraintLayout>