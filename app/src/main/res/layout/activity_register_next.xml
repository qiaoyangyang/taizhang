<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="viewModel"
            type="com.meiling.oms.viewmodel.RegisterViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        tools:context=".activity.RegisterActivity"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.hjq.bar.TitleBar
            android:id="@+id/TitleBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:barStyle="transparent"
            app:layout_constraintTop_toTopOf="parent"
            app:leftIcon="@drawable/bar_arrows_left_white"
            android:background="#FF4545"
            app:rightTitleSize="@dimen/sp_14"
            app:titleColor="@color/white"
            app:title="商户注册" />

        <androidx.core.widget.NestedScrollView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@color/white"
            app:layout_constraintTop_toBottomOf="@+id/TitleBar"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/tv_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="25dp"
                    android:layout_marginEnd="32dp"
                    android:textColor="#666666"
                    android:text="商家类型"
                    android:textSize="16sp"
                    android:layout_marginLeft="@dimen/dp_18"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="*"
                    android:textSize="16sp"
                    android:textColor="@color/red"
                    app:layout_constraintBaseline_toBaselineOf="@+id/tv_title"
                    app:layout_constraintStart_toEndOf="@+id/tv_title" />


                <com.wayne.constraintradiogroup.ConstraintRadioGroup
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:id="@+id/shopTypeRG"
                    android:padding="10dp"
                    app:layout_constraintTop_toBottomOf="@+id/tv_title"
                    app:layout_constraintStart_toStartOf="@+id/tv_title"
                    app:layout_constraintEnd_toEndOf="parent">

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:button="@drawable/login_cb_agreement"
                        android:text="企业"
                        android:paddingLeft="5dp"
                        android:checked='@{viewModel.businessDto.tenantType=="1"}'
                        android:id="@+id/checkEnterprise" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:padding="10dp"
                        android:id="@+id/tips1"
                        android:src="@drawable/order_dis_tip_icon"
                        app:layout_constraintStart_toEndOf="@+id/checkEnterprise"
                        app:layout_constraintTop_toTopOf="@+id/checkEnterprise"
                        app:layout_constraintBottom_toBottomOf="@+id/checkEnterprise" />

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:button="@drawable/login_cb_agreement"
                        android:text="个人   "
                        android:paddingLeft="5dp"
                        android:id="@+id/checkPerson"
                        android:checked='@{viewModel.businessDto.tenantType=="2"}'
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/tips2"
                        android:padding="10dp"
                        android:src="@drawable/order_dis_tip_icon"
                        app:layout_constraintStart_toEndOf="@+id/checkPerson"
                        app:layout_constraintTop_toTopOf="@+id/checkPerson"
                        app:layout_constraintBottom_toBottomOf="@+id/checkPerson" />


                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:button="@drawable/login_cb_agreement"
                        android:text="其他"
                        android:checked='@{viewModel.businessDto.tenantType=="3"}'
                        app:layout_constraintEnd_toStartOf="@+id/tips3"
                        android:id="@+id/checkOther" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/tips3"
                        android:padding="10dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:src="@drawable/order_dis_tip_icon"
                        app:layout_constraintTop_toTopOf="@+id/checkOther"
                        app:layout_constraintBottom_toBottomOf="@+id/checkOther" />

                </com.wayne.constraintradiogroup.ConstraintRadioGroup>

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:background="@color/home_F1F1F1"
                    app:layout_constraintTop_toBottomOf="@+id/shopTypeRG"
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="12dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    android:id="@+id/line" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@+id/line"
                    android:layout_marginTop="10dp"
                    android:id="@+id/txtOperateType"
                    android:textSize="16sp"
                    android:textColor="#666666"
                    app:layout_constraintStart_toStartOf="@+id/tv_title"
                    android:text="经营类型" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:layout_marginLeft="5dp"
                    android:textColor="@color/red"
                    android:id="@+id/txtOperateTypeRed"
                    app:layout_constraintBaseline_toBaselineOf="@+id/txtOperateType"
                    app:layout_constraintStart_toEndOf="@+id/txtOperateType"
                    android:text="*" />

                <com.wayne.constraintradiogroup.ConstraintRadioGroup
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:id="@+id/operateTypeRG"
                    android:padding="10dp"
                    app:layout_constraintTop_toBottomOf="@+id/txtOperateType"
                    app:layout_constraintStart_toStartOf="@+id/tv_title"
                    app:layout_constraintEnd_toEndOf="parent">

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:button="@drawable/login_cb_agreement"
                        android:text="连锁"
                        android:paddingLeft="5dp"
                        android:checked='@{viewModel.businessDto.isChain=="1"}'
                        android:id="@+id/checkChain" />

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:button="@drawable/login_cb_agreement"
                        android:text="非连锁"
                        android:paddingLeft="5dp"
                        android:id="@+id/checkUnChain"
                        android:checked='@{viewModel.businessDto.isChain=="0"}'
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent" />


                </com.wayne.constraintradiogroup.ConstraintRadioGroup>

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:background="@color/home_F1F1F1"
                    app:layout_constraintTop_toBottomOf="@+id/operateTypeRG"
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="12dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    android:id="@+id/line2" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtShopName"
                    app:layout_constraintStart_toStartOf="@+id/tv_title"
                    app:layout_constraintTop_toBottomOf="@+id/line2"
                    style="@style/registTitleTxt"
                    android:layout_marginTop="10dp"
                    android:text="企业名称" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtShopName2"
                    android:textColor="@color/red"
                    android:layout_marginLeft="5dp"
                    app:layout_constraintBaseline_toBaselineOf="@+id/txtShopName"
                    app:layout_constraintStart_toEndOf="@+id/txtShopName"
                    app:layout_constraintTop_toBottomOf="@+id/line2"
                    android:text="*" />

                <com.meiling.common.view.ClearEditText
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:hint="必须和营业执照的名称一致"
                    android:id="@+id/edtShopName"
                    android:layout_marginRight="10dp"
                    android:background="@null"
                    android:maxLines="1"
                    android:maxLength="30"
                    android:singleLine="true"
                    android:text="@={viewModel.businessDto.enterpriseName}"
                    app:layout_constraintBaseline_toBaselineOf="@+id/txtShopName"
                    app:layout_constraintTop_toBottomOf="@+id/line2"
                    app:layout_constraintStart_toEndOf="@+id/txtShopName2"
                    app:layout_constraintBottom_toTopOf="@+id/line4"
                    app:layout_constraintEnd_toEndOf="parent" />


                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:background="@color/home_F1F1F1"
                    app:layout_constraintTop_toBottomOf="@+id/txtShopName"
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="12dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    android:id="@+id/line4" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtShopBrandName"
                    app:layout_constraintStart_toStartOf="@+id/tv_title"
                    app:layout_constraintTop_toBottomOf="@+id/line4"
                    style="@style/registTitleTxt"
                    android:layout_marginTop="10dp"
                    android:text="品牌名称" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtShopBrandName2"
                    android:textColor="@color/red"
                    android:layout_marginLeft="5dp"
                    app:layout_constraintBaseline_toBaselineOf="@+id/txtShopBrandName"
                    app:layout_constraintStart_toEndOf="@+id/txtShopBrandName"
                    app:layout_constraintTop_toBottomOf="@+id/line4"
                    android:text="*" />

                <com.meiling.common.view.ClearEditText
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:hint="用于对外展示"
                    android:id="@+id/edtShopBrandName"
                    android:layout_marginRight="10dp"
                    android:background="@null"
                    android:maxLines="1"
                    android:maxLength="20"
                    android:singleLine="true"
                    android:text="@={viewModel.businessDto.tenantName}"
                    app:layout_constraintBaseline_toBaselineOf="@+id/txtShopBrandName"
                    app:layout_constraintTop_toBottomOf="@+id/line4"
                    app:layout_constraintStart_toEndOf="@+id/txtShopBrandName"
                    app:layout_constraintBottom_toTopOf="@+id/line5"
                    app:layout_constraintEnd_toEndOf="parent" />


                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:background="@color/home_F1F1F1"
                    app:layout_constraintTop_toBottomOf="@+id/txtShopBrandName2"
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="12dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    android:id="@+id/line5" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@+id/line5"
                    app:layout_constraintStart_toStartOf="@+id/tv_title"
                    android:text="品牌LOGO"
                    android:id="@+id/txtLogo"
                    android:layout_marginTop="10dp"
                    style="@style/registTitleTxt" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtLogoRed"
                    android:textColor="@color/red"
                    android:layout_marginLeft="5dp"
                    app:layout_constraintBaseline_toBaselineOf="@+id/txtLogo"
                    app:layout_constraintStart_toEndOf="@+id/txtLogo"
                    android:text="*" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@+id/txtLogo"
                    app:layout_constraintStart_toStartOf="@+id/tv_title"
                    android:text="只能上传jpg/jpeg/png文件,且不超过2000kb"
                    android:id="@+id/txtLogo2"
                    android:layout_marginTop="10dp"
                    android:textSize="14sp"
                    style="@style/registTitleTxt" />

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@mipmap/addimg"
                    android:scaleType="fitXY"
                    app:layout_constraintTop_toBottomOf="@+id/txtLogo2"
                    android:layout_marginTop="15dp"
                    android:id="@+id/addImg"
                    app:layout_constraintStart_toStartOf="@id/tv_title" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:textColor="@color/red"
                    app:layout_constraintStart_toStartOf="@id/tv_title"
                    app:layout_constraintTop_toBottomOf="@id/addImg"
                    android:layout_marginTop="10dp"
                    android:id="@+id/txtAddImg"
                    android:text="使用默认样式" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/registTitleTxt"
                    app:layout_constraintStart_toStartOf="@id/tv_title"
                    app:layout_constraintTop_toBottomOf="@+id/txtAddImg"
                    android:layout_marginTop="15dp"
                    android:id="@+id/txtIndustry"
                    android:text="所属行业" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/registTitleTxt"
                    app:layout_constraintStart_toEndOf="@id/txtIndustry"
                    app:layout_constraintTop_toBottomOf="@+id/txtAddImg"
                    android:layout_marginTop="15dp"
                    android:id="@+id/txtIndustry2"
                    android:textColor="@color/red"
                    android:layout_marginLeft="5dp"
                    app:layout_constraintBaseline_toBaselineOf="@+id/txtIndustry"
                    android:text="*" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@+id/txtAddImg"
                    android:id="@+id/txtIndustryRight"
                    android:layout_marginRight="5dp"
                    android:textSize="14sp"
                    app:layout_constraintBaseline_toBaselineOf="@+id/txtIndustry"
                    app:layout_constraintEnd_toStartOf="@+id/txtIndustryRight2"
                    android:hint="请选择"
                     />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@+id/txtAddImg"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginRight="15dp"
                    android:textSize="14sp"
                    android:id="@+id/txtIndustryRight2"
                    app:layout_constraintBaseline_toBaselineOf="@+id/txtIndustry"
                    android:text=">" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:background="@color/home_F1F1F1"
                    app:layout_constraintTop_toBottomOf="@+id/txtIndustry"
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="12dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    android:id="@+id/line6" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtAdministratorsName"
                    style="@style/registTitleTxt"
                    app:layout_constraintStart_toStartOf="@id/tv_title"
                    app:layout_constraintTop_toBottomOf="@+id/line6"
                    android:layout_marginTop="15dp"
                    android:text="管理员姓名"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtAdministratorsName2"
                    style="@style/registTitleTxt"
                    android:textColor="@color/red"
                    app:layout_constraintStart_toEndOf="@id/txtAdministratorsName"
                    app:layout_constraintTop_toBottomOf="@+id/line6"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="5dp"
                    app:layout_constraintBaseline_toBaselineOf="@+id/txtAdministratorsName"
                    android:text="*" />

                <com.meiling.common.view.ClearEditText
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/txtAdministratorsName2"
                    app:layout_constraintBaseline_toBaselineOf="@+id/txtAdministratorsName"
                    android:background="@null"
                    android:layout_marginTop="15dp"
                    android:hint="请输入"
                    android:text="@={viewModel.businessDto.tenantHead}"
                    android:maxLines="1"
                    android:maxLength="25"
                    android:singleLine="true"
                    android:gravity="right"
                    android:layout_marginRight="15dp"
                    android:textSize="16sp" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:background="@color/home_F1F1F1"
                    app:layout_constraintTop_toBottomOf="@+id/txtAdministratorsName"
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="12dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    android:id="@+id/line7" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtAdministratorsLoginName"
                    style="@style/registTitleTxt"
                    app:layout_constraintStart_toStartOf="@id/tv_title"
                    app:layout_constraintTop_toBottomOf="@+id/line7"
                    android:layout_marginTop="15dp"
                    android:text="管理员登录账号" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtAdministratorsLoginName2"
                    style="@style/registTitleTxt"
                    android:textColor="@color/red"
                    app:layout_constraintStart_toEndOf="@id/txtAdministratorsLoginName"
                    app:layout_constraintTop_toBottomOf="@+id/line6"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="5dp"
                    app:layout_constraintBaseline_toBaselineOf="@+id/txtAdministratorsLoginName"
                    android:text="*" />

                <com.meiling.common.view.ClearEditText
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/txtAdministratorsLoginName2"
                    app:layout_constraintBaseline_toBaselineOf="@+id/txtAdministratorsLoginName"
                    android:background="@null"
                    android:layout_marginTop="15dp"
                    android:hint="用户登录管理系统"
                    android:maxLines="1"
                    android:maxLength="25"
                    android:singleLine="true"
                    android:gravity="right"
                    android:layout_marginRight="15dp"
                    android:text="@={viewModel.businessDto.userName}"
                    android:id="@+id/editAdministratorsLoginName"
                    android:textSize="16sp" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:background="@color/home_F1F1F1"
                    app:layout_constraintTop_toBottomOf="@+id/txtAdministratorsLoginName"
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="12dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    android:id="@+id/line8" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtAdministratorsLoginPassWord"
                    style="@style/registTitleTxt"
                    app:layout_constraintStart_toStartOf="@id/tv_title"
                    app:layout_constraintTop_toBottomOf="@+id/line8"
                    android:layout_marginTop="15dp"
                    android:text="管理员登录密码" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtAdministratorsLoginPassWord2"
                    style="@style/registTitleTxt"
                    android:textColor="@color/red"
                    app:layout_constraintStart_toEndOf="@id/txtAdministratorsLoginPassWord"
                    app:layout_constraintTop_toBottomOf="@+id/line6"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="5dp"
                    app:layout_constraintBaseline_toBaselineOf="@+id/txtAdministratorsLoginPassWord"
                    android:text="*" />

                <com.meiling.common.view.ClearEditText
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/txtAdministratorsLoginPassWord"
                    app:layout_constraintBaseline_toBaselineOf="@+id/txtAdministratorsLoginPassWord"
                    android:background="@null"
                    android:layout_marginTop="15dp"
                    android:hint="用户登录管理系统"
                    android:text="@={viewModel.businessDto.password}"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:gravity="right"
                    android:layout_marginRight="15dp"
                    android:id="@+id/editAdministratorsLoginPassWord"
                    android:textSize="16sp" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:background="@color/home_F1F1F1"
                    app:layout_constraintTop_toBottomOf="@+id/txtAdministratorsLoginPassWord"
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="12dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    android:id="@+id/line9" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnNext"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/dp_90"
                    android:layout_marginTop="@dimen/dp_80"
                    android:background="@drawable/login_btn_selector"
                    android:enabled="true"
                    android:text="下一步"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="20dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/line9"
                    app:layout_constraintBottom_toBottomOf="parent" />


            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.core.widget.NestedScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
