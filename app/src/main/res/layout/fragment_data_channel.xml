<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <TextView
        android:layout_width="84dp"
        android:layout_height="20dp"
        android:layout_marginHorizontal="@dimen/dp_20"
        android:layout_marginVertical="@dimen/dp_20"
        android:text="今日实时数据"
        android:textColor="#ff333333"
        android:textSize="14sp" />

    <com.hjq.shape.layout.ShapeLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/dp_20"
        android:orientation="vertical"
        android:paddingVertical="@dimen/dp_20"
        app:shape_radius="@dimen/dp_20"
        app:shape_solidColor="#F5F5F5">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/dp_20"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:paddingHorizontal="@dimen/dp_30">

            <TextView
                android:layout_width="0dp"
                android:layout_height="17dp"
                android:layout_weight="1"
                android:text="销售渠道"
                android:textColor="#ff777777"
                android:textSize="12sp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="17dp"
                android:layout_weight="1"
                android:text="订单数量小计(单)"
                android:gravity="end"
                android:textColor="#ff777777"
                android:textSize="12sp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="17dp"
                android:layout_weight="1"
                android:text="收款小计(元)"
                android:textColor="#ff777777"
                android:layout_gravity="end"
                android:gravity="end"
                android:textSize="12sp" />
        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_data_channel"
            android:layout_width="match_parent"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            tools:listitem="@layout/item_data_shop"
            android:layout_height="200dp" />
    </com.hjq.shape.layout.ShapeLinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="84dp"
            android:layout_height="20dp"
            android:layout_marginHorizontal="@dimen/dp_20"
            android:layout_marginVertical="@dimen/dp_20"
            android:text="历史数据"
            android:textColor="#ff333333"
            android:textSize="14sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_marginVertical="@dimen/dp_20"
            android:text="昨日"
            android:drawableEnd="@drawable/icon_next"
            android:layout_marginEnd="@dimen/dp_20"
            android:textColor="@color/home_999999"
            android:layout_alignParentRight="true"
            android:textSize="14sp" />
    </RelativeLayout>

    <com.hjq.shape.layout.ShapeLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/dp_20"
        android:orientation="vertical"
        android:paddingVertical="@dimen/dp_20"
        app:shape_radius="@dimen/dp_20"
        app:shape_solidColor="#F5F5F5">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/dp_20"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:paddingHorizontal="@dimen/dp_30">

            <TextView
                android:layout_width="0dp"
                android:layout_height="17dp"
                android:layout_weight="1"
                android:text="销售渠道"
                android:textColor="#ff777777"
                android:textSize="12sp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="17dp"
                android:layout_weight="1"
                android:text="订单数量小计(单)"
                android:textColor="#ff777777"
                android:textSize="12sp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="17dp"
                android:layout_weight="1"
                android:text="收款小计(元)"
                android:textColor="#ff777777"
                android:layout_gravity="end"
                android:gravity="end"
                android:textSize="12sp" />
        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_data_channel_history"
            android:layout_width="match_parent"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            tools:listitem="@layout/item_data_shop"
            android:layout_height="wrap_content" />
    </com.hjq.shape.layout.ShapeLinearLayout>
</LinearLayout>







