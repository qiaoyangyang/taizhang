<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="400dp"
    android:background="@drawable/scan_bg_input">

    <TextView
        android:id="@+id/txt_title_item_city"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginVertical="15dp"
        android:text="选择发货门店"
        android:textColor="@color/home_333333"
        android:textSize="@dimen/sp_34"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iv_close_select_shop_city"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/txt_title_item_city"
        android:layout_alignBottom="@+id/txt_title_item_city"
        android:layout_alignParentEnd="true"
        android:paddingHorizontal="@dimen/dp_20"
        android:src="@drawable/icon_close_x_balck"
         />


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_shop_or_city"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_title_item_city"
        android:layout_centerInParent="true"
        android:layout_marginHorizontal="@dimen/dp_20"
        android:background="@color/white"
        android:orientation="vertical"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        tools:listitem="@layout/item_dialog_account_select_city_or_shop">

    </androidx.recyclerview.widget.RecyclerView>



</RelativeLayout>