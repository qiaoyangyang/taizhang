<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cl_login_bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FF4545"
    tools:context=".activity.LoginActivity">

    <com.hjq.bar.TitleBar
        android:id="@+id/TitleBar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        app:barStyle="transparent"
        app:layout_constraintTop_toTopOf="parent"
        app:leftIcon="@null"
        app:rightBackground="@null"
        app:rightTitleSize="@dimen/sp_14"
        app:title="" />

    <View
        android:id="@+id/view_bg"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="@dimen/dp_240"
        android:background="@drawable/bg_log_bg"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/TitleBar" />

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="32dp"
        android:textColor="#333333"
        android:textSize="28sp"
        android:textStyle="bold"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/view_bg" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_phone"
        android:layout_width="0dp"
        android:layout_height="@dimen/dp_100"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="30dp"
        android:background="@drawable/bg_f8"
        android:paddingHorizontal="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_title">

        <ImageView
            android:id="@+id/iv_phone"
            android:layout_width="24dp"
            android:layout_height="24dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.hjq.widget.view.ClearEditText
            android:id="@+id/et_phone"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="@dimen/dp_30"
            android:background="@null"
            android:singleLine="true"
            android:textColorHint="@color/home_999999"
            android:textSize="@dimen/sp_32"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.4"
            app:layout_constraintLeft_toRightOf="@+id/iv_phone"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="TouchTargetSizeCheck,DuplicateSpeakableTextCheck,SpeakableTextPresentCheck" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_password"
        android:layout_width="0dp"
        android:layout_height="@dimen/dp_100"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="30dp"
        android:background="@drawable/bg_f8"
        android:paddingHorizontal="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cl_phone">

        <ImageView
            android:id="@+id/iv_password"
            android:layout_width="24dp"
            android:layout_height="24dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/et_password"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="@dimen/dp_30"
            android:background="@null"
            android:singleLine="true"
            android:imeOptions="actionDone"
            android:inputType="textPassword"
            android:textColorHint="@color/home_999999"
            android:textSize="16sp"
            app:layout_constraintHorizontal_bias="0.4"
            app:layout_constraintLeft_toRightOf="@+id/iv_password"
            app:layout_constraintRight_toLeftOf="@+id/txt_auth_code"
            app:layout_constraintTop_toTopOf="parent"
            />

        <com.hjq.shape.view.ShapeTextView
            android:id="@+id/txt_auth_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:gravity="center"
            android:visibility="invisible"
            android:imeOptions="actionDone"
            android:paddingHorizontal="@dimen/dp_20"
            android:paddingVertical="@dimen/dp_10"
            android:shadowColor="@color/home_333333"
            android:singleLine="true"
            android:text="获取验证码"
            android:textColor="@color/white"
            android:textColorHint="@color/home_999999"
            android:textSize="@dimen/sp_25"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:shape_radius="@dimen/dp_100"
            app:shape_solidColor="@color/red"
            tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck" />


        <CheckBox
            android:id="@+id/cb_pwd_show"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/dp_10"
            android:button="@drawable/login_password_look_selector"
            android:checked="true"
            app:layout_constraintBottom_toBottomOf="@+id/et_password"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/et_password" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnLogin"
        android:layout_width="0dp"
        android:layout_height="@dimen/dp_90"
        android:layout_marginTop="@dimen/dp_80"
        android:background="@drawable/login_btn_selector"
        android:enabled="false"
        android:text="登录"
        android:textColor="@color/white"
        android:textSize="18sp"
        app:layout_constraintLeft_toLeftOf="@+id/cl_password"
        app:layout_constraintRight_toRightOf="@+id/cl_password"
        app:layout_constraintTop_toBottomOf="@+id/cl_password" />

    <TextView
        android:id="@+id/tv_login"
        android:layout_width="1dp"
        android:layout_height="@dimen/dp_40"
        android:layout_marginTop="@dimen/dp_60"
        android:background="#E7E7E7"
        app:layout_constraintLeft_toLeftOf="@+id/btnLogin"
        app:layout_constraintRight_toRightOf="@+id/btnLogin"
        app:layout_constraintTop_toBottomOf="@+id/btnLogin" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="立即注册"
        app:layout_constraintBottom_toBottomOf="@+id/tv_login"
        app:layout_constraintLeft_toLeftOf="@+id/btnLogin"
        app:layout_constraintRight_toLeftOf="@+id/tv_login" />

    <TextView
        android:id="@+id/txt_forget_pwd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="忘记密码"
        app:layout_constraintBottom_toBottomOf="@+id/tv_login"
        app:layout_constraintLeft_toRightOf="@+id/tv_login"
        app:layout_constraintRight_toRightOf="@+id/btnLogin" />
    <TextView
        android:id="@+id/Other_login_methods"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_80"
        android:text="其他登录方式"
        app:layout_constraintLeft_toLeftOf="@+id/btnLogin"
        app:layout_constraintRight_toRightOf="@+id/btnLogin"
        app:layout_constraintTop_toBottomOf="@+id/tv_login" />
    <TextView
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginEnd="10dp"
        android:background="#E7E7E7"
        app:layout_constraintBottom_toBottomOf="@+id/Other_login_methods"
        app:layout_constraintLeft_toLeftOf="@+id/btnLogin"
        app:layout_constraintRight_toLeftOf="@+id/Other_login_methods"
        app:layout_constraintTop_toTopOf="@+id/Other_login_methods" />

    <TextView
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginLeft="10dp"
        android:background="#E7E7E7"
        app:layout_constraintBottom_toBottomOf="@+id/Other_login_methods"
        app:layout_constraintLeft_toRightOf="@+id/Other_login_methods"
        app:layout_constraintRight_toRightOf="@+id/btnLogin"
        app:layout_constraintTop_toTopOf="@+id/Other_login_methods" />

    <TextView
        android:id="@+id/tv_Other_login_methods"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawablePadding="@dimen/dp_20"
        android:textColor="@color/home_999999"
        app:layout_constraintBottom_toTopOf="@+id/cl_agreement"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:textSize="@dimen/sp_30"
        app:layout_constraintTop_toBottomOf="@+id/Other_login_methods" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_agreement"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_80"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <CheckBox
            android:id="@+id/cb_agreementv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@drawable/login_cb_agreement"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/tv_agreement"
            tools:ignore="TouchTargetSizeCheck" />

        <TextView
            android:id="@+id/tv_agreement"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:drawablePadding="5dp"
            android:textSize="@dimen/sp_24"
            android:text="登录即代表同意《美零云店用户协议及隐私政策》"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/cb_agreementv" />
    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>