    <TextView
        android:layout_width="0dp"
        android:layout_height="17dp"
        android:layout_weight="1"
        android:text="2874"
        android:gravity="end"
        android:textColor="#ff777777"
        android:textSize="12sp" />

    <TextView
        android:layout_width="0dp"
        android:layout_height="17dp"
        android:layout_gravity="end"
        android:layout_weight="1"
        android:gravity="end"
        android:text="9527"
        android:textColor="#ff777777"
        android:textSize="12sp" />
</LinearLayout>


