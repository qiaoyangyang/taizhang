<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="viewModel"
            type="com.meiling.oms.viewmodel.StoreManagementViewModel" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/scan_bg_input"
        >

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            >

            <com.hjq.shape.layout.ShapeLinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:paddingBottom="@dimen/dp_34"
                    >

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/registLogisticsTitle"
                        android:layout_marginLeft="@dimen/dp_32"
                        android:layout_marginTop="@dimen/dp_34"
                        android:text="注册达达"
                        android:gravity="center"
                        android:textColor="@color/home_333333"
                        android:drawableRight="@drawable/search_close_edt"
                        android:textSize="@dimen/sp_32"
                        android:layout_marginRight="15dp"
                        android:textStyle="bold" />

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_32"
                        android:layout_marginRight="@dimen/dp_32">

                        <TextView
                            android:id="@+id/tv_Store_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingVertical="@dimen/dp_30"
                            android:text="店铺名称"
                            android:textColor="@color/home_666666"
                            android:textSize="@dimen/sp_32"
                            app:drawableEndCompat="@drawable/icon_must_input"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <com.meiling.common.view.ClearEditText
                            android:id="@+id/et_Store_name"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:background="@color/white"
                            android:gravity="right|center"
                            android:hint="请输入店铺名称"
                            android:maxLength="30"
                            android:textColor="@color/home_333333"
                            android:textColorHint="@color/home_999999"
                            android:textSize="@dimen/sp_32"
                            app:layout_constraintBaseline_toBaselineOf="@+id/tv_Store_name"
                            app:layout_constraintLeft_toRightOf="@+id/tv_Store_name"
                            app:layout_constraintRight_toRightOf="parent" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginTop="@dimen/dp_30"
                            android:background="#F5F5F5"
                            app:layout_constraintTop_toBottomOf="@+id/et_Store_name" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_32"
                    android:layout_marginRight="@dimen/dp_32">

                    <TextView
                        android:id="@+id/tv_Store_address"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingVertical="@dimen/dp_30"
                        android:text="店铺地址"
                        android:textColor="@color/home_666666"
                        android:textSize="@dimen/sp_32"
                        app:drawableEndCompat="@drawable/icon_must_input"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/et_Store_address"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:drawableRight="@drawable/icon_back1"
                        android:gravity="right|center"
                        android:hint="请选择店铺地址"
                        android:textColor="@color/home_333333"
                        android:textColorHint="@color/home_999999"
                        android:textSize="@dimen/sp_32"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toRightOf="@+id/tv_Store_address"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="@dimen/dp_30"
                        android:background="#F5F5F5"
                        app:layout_constraintTop_toBottomOf="@+id/et_Store_address" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_32"
                    android:layout_marginRight="@dimen/dp_32">

                    <TextView
                        android:id="@+id/tv_detailed_address"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingVertical="@dimen/dp_30"
                        android:text="详细地址"
                        android:textColor="@color/home_666666"
                        android:textSize="@dimen/sp_32"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <com.meiling.common.view.ClearEditText
                        android:id="@+id/et_detailed_address"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:gravity="right|center"
                        android:hint="请填写详细的门店地址"
                        android:maxLength="30"
                        android:textColor="@color/home_333333"
                        android:textColorHint="@color/home_999999"
                        android:textSize="@dimen/sp_32"
                        app:layout_constraintBaseline_toBaselineOf="@+id/tv_detailed_address"
                        app:layout_constraintLeft_toRightOf="@+id/tv_detailed_address"
                        app:layout_constraintRight_toRightOf="parent" />


                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_32"
                    android:layout_marginRight="@dimen/dp_32">

                    <TextView
                        android:id="@+id/tv_Store_telephone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingVertical="@dimen/dp_30"
                        android:text="注册手机号"
                        android:textColor="@color/home_666666"
                        android:textSize="@dimen/sp_32"
                        app:drawableEndCompat="@drawable/icon_must_input"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <com.meiling.common.view.ClearEditText
                        android:id="@+id/et_Store_telephone"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:gravity="right|center"
                        android:hint="请输入手机号"
                        android:inputType="number"
                        android:maxLength="11"
                        android:textColor="@color/home_333333"
                        android:textColorHint="@color/home_999999"
                        android:textSize="@dimen/sp_32"
                        app:layout_constraintBaseline_toBaselineOf="@+id/tv_Store_telephone"
                        app:layout_constraintLeft_toRightOf="@+id/tv_Store_telephone"
                        app:layout_constraintRight_toRightOf="parent" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="@dimen/dp_30"
                        android:background="#F5F5F5"
                        app:layout_constraintTop_toBottomOf="@+id/et_Store_telephone" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_32"
                    android:layout_marginRight="@dimen/dp_32">

                    <TextView
                        android:id="@+id/tv_operate_type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingVertical="@dimen/dp_30"
                        android:text="经营类型"
                        android:textColor="@color/home_666666"
                        android:textSize="@dimen/sp_32"
                        app:drawableEndCompat="@drawable/icon_must_input"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/tv_operate_type2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:drawableRight="@drawable/icon_back1"
                        android:gravity="right|center"
                        android:hint="请选择经营类型"
                        android:textColor="@color/home_333333"
                        android:textColorHint="@color/home_999999"
                        android:textSize="@dimen/sp_32"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toRightOf="@+id/tv_operate_type"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="@dimen/dp_30"
                        android:background="#F5F5F5"
                        app:layout_constraintTop_toBottomOf="@+id/tv_operate_type2" />

                </androidx.constraintlayout.widget.ConstraintLayout>


                <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_32"
                        android:layout_marginRight="@dimen/dp_32">

                        <TextView
                            android:id="@+id/tv_Store_number"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingVertical="@dimen/dp_30"
                            android:text="电子邮箱"
                            android:textColor="@color/home_666666"
                            android:textSize="@dimen/sp_32"
                            app:drawableEndCompat="@drawable/icon_must_input"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <com.meiling.common.view.ClearEditText
                            android:id="@+id/et_Store_number"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:background="@color/white"
                            android:gravity="right|center"
                            android:hint="请输入电子邮箱"
                            android:maxLength="30"
                            android:textColor="@color/home_333333"
                            android:textColorHint="@color/home_999999"
                            android:textSize="@dimen/sp_32"
                            app:layout_constraintBaseline_toBaselineOf="@+id/tv_Store_number"
                            app:layout_constraintLeft_toRightOf="@+id/tv_Store_number"
                            app:layout_constraintRight_toRightOf="parent" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginTop="@dimen/dp_30"
                            android:background="#F5F5F5"
                            app:layout_constraintTop_toBottomOf="@+id/et_Store_number" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:button="@drawable/login_cb_agreement"
                    android:layout_marginLeft="@dimen/dp_32"
                    android:textColor="#999999"
                    android:id="@+id/checkBoxAgree"
                    android:textSize="@dimen/sp_24"
                    android:layout_marginTop="10dp"
                    android:paddingLeft="5dp"
                    android:text="我已同意以下协议:"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#ff1180ff"
                        android:textSize="@dimen/sp_24"
                        android:id="@+id/registUrl"
                        android:text="《注册协议》"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#ff1180ff"
                        android:textSize="@dimen/sp_24"
                        android:id="@+id/userUrl"
                        android:text="《个人敏感信息授权协议》"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#ff1180ff"
                        android:textSize="@dimen/sp_24"
                        android:id="@+id/userUrl2"
                        android:text="《授权协议》"/>

                </LinearLayout>


                <LinearLayout
                    android:id="@+id/ll_btn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    app:layout_constraintBottom_toBottomOf="parent">

                    <com.hjq.shape.view.ShapeButton
                        android:id="@+id/tv_go_on"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="18dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="18dp"
                        android:layout_marginBottom="10dp"
                        android:layout_weight="1"
                        android:background="@drawable/login_btn_selector"
                        android:enabled="false"
                        android:gravity="center"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:text="一键注册"
                        android:textColor="@color/white"
                        android:textSize="@dimen/sp_32"
                        app:shape_radius="10dp" />

                </LinearLayout>

                </com.hjq.shape.layout.ShapeLinearLayout>

        </androidx.core.widget.NestedScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>