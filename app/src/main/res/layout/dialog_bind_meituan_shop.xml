<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/scan_bg_input">
    <TextView
        android:layout_marginTop="15dp"
        android:id="@+id/tv_title"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:text="绑定美团店铺"
        android:textSize="18sp"
        android:textColor="@color/home_333333"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <ImageView
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_title"
        android:id="@+id/iv_close_recharge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/tv_title"
        android:layout_alignBottom="@+id/tv_title"
        android:layout_alignParentEnd="true"
        android:paddingHorizontal="@dimen/dp_20"
        android:src="@drawable/icon_back_g" />
    <TextView
        android:gravity="center"
        android:textSize="@dimen/sp_32"
        android:textColor="@color/home_333333"
        android:layout_marginTop="@dimen/dp_54"
        android:id="@+id/tv_ti"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:text="您目前美团外卖店铺的接单打印方式是？"
        app:layout_constraintTop_toBottomOf="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


    <androidx.recyclerview.widget.RecyclerView

        android:layout_marginLeft="18dp"
        android:layout_marginRight="18dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:background="@color/white"
        android:id="@+id/recyClerView"
        app:layout_constraintTop_toBottomOf="@+id/tv_ti"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
       />



    <com.hjq.shape.view.ShapeButton
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"

        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/recyClerView"
        android:id="@+id/btn_ok_exit"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:layout_marginStart="@dimen/dp_20"
        android:layout_marginEnd="@dimen/dp_20"
        android:layout_weight="1"
        android:gravity="center"
        android:shadowColor="@color/home_666666"
        android:text="确认"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_25"
        app:shape_radius="@dimen/dp_44"
        app:shape_solidColor="@color/red" />


</androidx.constraintlayout.widget.ConstraintLayout>