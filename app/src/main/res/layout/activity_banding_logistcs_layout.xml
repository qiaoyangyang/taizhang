<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <com.hjq.bar.TitleBar
        android:id="@+id/TitleBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:barStyle="transparent"
        app:layout_constraintTop_toTopOf="parent"
        app:leftIcon="@drawable/bar_arrows_left_white"
        android:background="#FF4545"
        app:rightTitleSize="@dimen/sp_14"
        app:titleColor="@color/white"
        app:title="绑定物流" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="#fff7f7f7"
        app:layout_constraintTop_toBottomOf="@+id/TitleBar"
        app:layout_constraintBottom_toTopOf="@+id/btnSuccess">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.hjq.shape.layout.ShapeConstraintLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:shape_radius="20dp"
                app:shape_solidColor="#ffffffff"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="20dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:id="@+id/outShpLay"
                android:layout_marginHorizontal="15dp"
                >

                <View
                    android:layout_width="4dp"
                    android:layout_height="8dp"
                    android:background="@color/red"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_marginLeft="10dp"
                    app:layout_constraintTop_toTopOf="@+id/title"
                    app:layout_constraintBottom_toBottomOf="@+id/title"
                    android:id="@+id/view1"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/registTitleTxt"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toRightOf="@+id/view1"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="5dp"
                    android:id="@+id/title"
                    android:textColor="@color/black"
                    android:text="未绑定"/>


                <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    tools:listitem="@layout/item_merchant"
                    android:id="@+id/recyClerView"
                    app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
                    app:spanCount="4"
                    app:layout_constraintTop_toBottomOf="@+id/title"/>

            </com.hjq.shape.layout.ShapeConstraintLayout>

            <com.hjq.shape.layout.ShapeConstraintLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:shape_radius="20dp"
                app:shape_solidColor="#ffffffff"
                app:layout_constraintTop_toBottomOf="@+id/outShpLay"
                android:layout_marginTop="10dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:id="@+id/outShpLay2"
                android:layout_marginHorizontal="15dp"
                >
                <View
                    android:layout_width="4dp"
                    android:layout_height="8dp"
                    android:background="@color/red"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_marginLeft="20dp"
                    app:layout_constraintTop_toTopOf="@+id/title2"
                    app:layout_constraintBottom_toBottomOf="@+id/title2"
                    android:id="@+id/view2"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/registTitleTxt"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toRightOf="@+id/view2"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="5dp"
                    android:id="@+id/title2"
                    android:textColor="@color/black"
                    android:text="已绑定"/>


                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyClerView2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="10dp"
                    app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/title2"
                    app:spanCount="4"
                    tools:listitem="@layout/item_merchant" />

            </com.hjq.shape.layout.ShapeConstraintLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/outShpLay2"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:id="@+id/bindRefresh"
                android:text="绑定完成后,点击刷新,可获取绑定结果"
                android:layout_marginTop="10dp"
                android:textSize="@dimen/sp_28"
                android:textColor="#ff999999"
                />


        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.core.widget.NestedScrollView>






    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnSuccess"
        android:layout_width="0dp"
        android:layout_height="@dimen/dp_90"
        android:layout_marginBottom="@dimen/dp_80"
        android:background="@drawable/login_btn_selector"
        android:enabled="true"
        android:text="注册成功,开始使用"
        android:layout_marginHorizontal="20dp"
        android:textColor="@color/white"
        android:textSize="18sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>