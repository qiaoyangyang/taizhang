<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/scan_bg_input">
    <TextView
        android:layout_marginTop="15dp"
        android:id="@+id/tv_title"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:text="选择门店"
        android:textSize="18sp"
        android:textColor="@color/home_333333"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <ImageView
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_title"
        android:id="@+id/iv_close_recharge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/tv_title"
        android:layout_alignBottom="@+id/tv_title"
        android:layout_alignParentEnd="true"
        android:paddingHorizontal="@dimen/dp_20"
        android:src="@drawable/icon_back_g" />


    <LinearLayout
        android:layout_marginLeft="18dp"
        android:layout_marginRight="18dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp"
        android:background="@color/white"
        android:id="@+id/ll_btn"
        app:layout_constraintTop_toBottomOf="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="horizontal"
        >

            <com.meiling.common.base.WheelItemView
            android:id="@+id/wheel_view_left"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            app:wheelTextColor="#333333"
            app:wheelMaskLineColor="#F5F5F5"

            app:wheelTextSize="16sp"
            app:wheelShowCount="3"
            app:wheelItemVerticalSpace="30dp"

            />

        <com.meiling.common.base.WheelItemView
            app:wheelShowCount="3"
            app:wheelItemVerticalSpace="30dp"
            app:wheelMaskLineColor="#F5F5F5"
            android:id="@+id/wheel_view_center"
            android:layout_width="0dp"
            android:layout_weight="2"

            android:layout_height="wrap_content"
            app:wheelTextColor="#333333"
            app:wheelTextSize="16sp"

            />


    </LinearLayout>
    <com.hjq.shape.view.ShapeButton
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"

        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ll_btn"
        android:id="@+id/btn_ok_exit"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:layout_marginStart="@dimen/dp_20"
        android:layout_marginEnd="@dimen/dp_20"
        android:layout_weight="1"
        android:gravity="center"
        android:shadowColor="@color/home_666666"
        android:text="确认"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_25"
        app:shape_radius="@dimen/sp_15"
        app:shape_solidColor="@color/red" />


</androidx.constraintlayout.widget.ConstraintLayout>