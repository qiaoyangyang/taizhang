<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/imgView"
        android:layout_width="@dimen/dp_40"
        android:layout_height="@dimen/dp_40"
        android:layout_marginStart="@dimen/dp_10"
        android:layout_marginTop="5dp"
        android:scaleType="center"
        android:src="@drawable/icon_order_dis_ing"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/viewLine"
        android:layout_width="1dp"
        android:layout_height="0dp"
        android:background="@color/order_dis_D9D9D9"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/imgView"
        app:layout_constraintRight_toLeftOf="@+id/imgView"
        app:layout_constraintTop_toBottomOf="@+id/imgView" />


    <RelativeLayout
        android:id="@+id/rlOperate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_20"
        android:layout_marginEnd="@dimen/dp_20"
        android:layout_marginBottom="@dimen/dp_10"
        android:paddingStart="@dimen/dp_30"
        android:paddingEnd="@dimen/dp_30"
        android:paddingBottom="@dimen/dp_30"
        app:layout_constraintLeft_toRightOf="@+id/imgView"
        app:layout_constraintTop_toTopOf="@+id/imgView">


        <TextView
            android:id="@+id/txtOperateName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_4"
            android:layout_marginEnd="@dimen/dp_20"
            android:textColor="@color/home_333333"
            android:textSize="@dimen/sp_32"
            android:textStyle="bold"
            tools:text="配送取消" />

        <TextView
            android:id="@+id/txtOperateRemark"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/dp_20"
            android:layout_toEndOf="@+id/txtOperateName"
            android:textColor="@color/home_666666"
            android:textSize="@dimen/sp_28"
            tools:text="08-06 10:53" />

        <TextView
            android:id="@+id/txtOperate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtOperateRemark"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="@dimen/dp_20"
            android:textColor="@color/home_666666"
            android:textSize="@dimen/sp_28"
            tools:text="包裹已签收" />

        <TextView
            android:id="@+id/txt_dis_detail_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtOperate"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="@dimen/dp_20"
            android:textColor="@color/home_666666"
            android:textSize="@dimen/sp_28"
            android:visibility="gone"
            tools:text="配送员:张三" />

        <TextView
            android:id="@+id/txt_dis_detail_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtOperate"
            android:layout_alignBottom="@+id/txt_dis_detail_name"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="@dimen/dp_20"
            android:layout_toEndOf="@+id/txt_dis_detail_name"
            android:textColor="@color/order_dis_5498FE"
            android:textSize="@dimen/sp_28"
            android:visibility="gone"
            tools:text="1*******" />

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>

