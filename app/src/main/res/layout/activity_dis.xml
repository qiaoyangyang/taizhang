<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/app_themes_f7f7f7"
    android:orientation="vertical">
    <com.hjq.bar.TitleBar
        android:id="@+id/TitleBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/app_themes_1f2333"
        app:layout_constraintTop_toTopOf="parent"
        app:leftIcon="@drawable/bar_arrows_left_white"
        app:lineVisible="false"
        app:rightTitleSize="@dimen/sp_36"
        app:title="发起配送"
        app:titleColor="@color/white" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_20"
        android:background="@drawable/scan_bg_input"
        android:padding="@dimen/dp_20"
        app:layout_constraintTop_toBottomOf="@+id/txt_order_dis">

        <ImageView
            android:id="@+id/img_dis"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/txt_order_dis_name"
            android:layout_alignBottom="@+id/txt_order_dis_name"
            android:src="@drawable/order_dis_rec_icon" />

        <TextView
            android:id="@+id/txt_order_dis_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginHorizontal="@dimen/sp_20"
            android:layout_toEndOf="@+id/img_dis"
            android:gravity="start"
            tools:text="李"
            android:ellipsize="end"
            android:maxEms="7"
            android:singleLine="true"
            android:textColor="@color/home_666666"
            android:textSize="@dimen/sp_36"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txt_order_dis_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/img_dis"
            android:layout_alignBottom="@+id/img_dis"
            android:layout_toEndOf="@+id/txt_order_dis_name"
            android:gravity="center"
            tools:text="188****8888"
            android:singleLine="true"
            android:textColor="@color/home_666666"
            android:textSize="@dimen/sp_22" />

        <TextView
            android:id="@+id/txt_order_dis_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_below="@+id/txt_order_dis_name"
            android:layout_alignStart="@+id/txt_order_dis_name"
            android:layout_marginBottom="@dimen/dp_40"
            tools:text="内蒙古自治区鄂尔多斯市伊金霍洛旗伊金霍洛旗札萨克物流园区 14 幢 158 室"
            android:textColor="@color/home_666666"
            android:maxLines="2"
            android:ellipsize="end"
            android:textSize="@dimen/sp_28" />


        <ImageView
            android:id="@+id/view_line"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_above="@+id/img_dis_receive"
            android:layout_below="@+id/img_dis"
            android:layout_alignStart="@+id/img_dis"
            android:layout_alignEnd="@+id/img_dis"
            android:src="@mipmap/order_line" />

        <ImageView
            android:id="@+id/img_dis_receive"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="center"
            android:layout_below="@+id/txt_order_dis_address"
            android:layout_alignTop="@+id/txt_order_dis_rec_name"
            android:layout_alignBottom="@+id/txt_order_dis_rec_name"
            android:src="@drawable/order_dis_shou_icon" />

        <TextView
            android:id="@+id/txt_order_dis_rec_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_order_dis_address"
            android:layout_marginHorizontal="@dimen/sp_20"
            android:layout_toEndOf="@+id/img_dis_receive"
            android:gravity="center"
            tools:text="李"
            android:textColor="@color/home_666666"
            android:textSize="@dimen/sp_36"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txt_order_dis_rec_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/img_dis_receive"
            android:layout_alignBottom="@+id/img_dis_receive"
            android:layout_toEndOf="@+id/txt_order_dis_rec_name"
            android:gravity="center"
            tools:text="188****8888"
            android:textColor="@color/home_666666"
            android:textSize="@dimen/sp_22" />

        <TextView
            android:id="@+id/txt_order_dis_rec_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_order_dis_rec_name"
            android:layout_alignLeft="@+id/txt_order_dis_rec_name"
            tools:text=" 14 幢 158 室"
            android:textColor="#ff666666"
            android:maxLines="2"
            android:layout_marginTop="@dimen/dp_5"
            android:ellipsize="end"
            android:textSize="@dimen/sp_28" />

        <ImageView
            android:id="@+id/iv_detail"
            android:scaleType="center"
            android:layout_alignTop="@+id/txt_order_dis_rec_name"
            android:layout_alignParentRight="true"
            android:layout_width="@dimen/dp_100"
            android:layout_above="@+id/txt_order_dis_rec_address"
            android:src="@drawable/bianjie"
            android:layout_height="@dimen/dp_100"/>

    </RelativeLayout>

    <com.angcyo.tablayout.DslTabLayout
        android:id="@+id/tab_layout"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tab_deselect_color="@color/order_9b9b9b"
        app:tab_divider_margin_top="@dimen/dp_10"
        app:tab_draw_indicator="true"
        app:tab_enable_gradient_scale="false"
        app:tab_enable_text_bold="true"
        app:tab_indicator_color="@color/red"
        app:tab_indicator_drawable="@drawable/indicator_bottom_line_1"
        app:tab_indicator_enable_flow="true"
        app:tab_indicator_height="@dimen/dp_5"
        app:tab_indicator_solid_color="@color/red"
        app:tab_indicator_style="STYLE_BOTTOM"
        app:tab_indicator_width="30dp"
        app:tab_item_is_equ_width="true"
        app:tab_select_color="@color/home_333333">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingBottom="@dimen/dp_10"
            android:text="同城快送"
            android:textColor="@color/order_9b9b9b"
            android:textSize="@dimen/sp_32" />

<!--        <TextView-->
<!--            android:layout_width="wrap_content"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:gravity="center"-->
<!--            android:paddingBottom="@dimen/dp_10"-->
<!--            android:text="全国配送"-->
<!--            android:textColor="@color/order_9b9b9b"-->
<!--            android:textSize="@dimen/sp_32" />-->

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingBottom="@dimen/dp_10"
            android:text="自配送"
            android:textColor="@color/order_9b9b9b"
            android:textSize="@dimen/sp_32" />


    </com.angcyo.tablayout.DslTabLayout>

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/view_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/dp_20"
        />


</androidx.appcompat.widget.LinearLayoutCompat>