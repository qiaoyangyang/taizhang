<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF7F7F7"
    android:orientation="vertical">


    <com.hjq.bar.TitleBar
        android:id="@+id/TitleBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/red"
        app:barStyle="transparent"
        app:layout_constraintTop_toTopOf="parent"
        app:leftIcon="@drawable/bar_arrows_left_white"
        app:rightBackground="@null"
        app:rightTitleSize="@dimen/sp_14"
        app:title="绑定打印机"
        app:titleColor="@color/white" />

    <TextView

        android:id="@+id/tv_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFEFD4"
        android:clickable="true"
        android:drawableLeft="@drawable/tt"
        android:drawablePadding="@dimen/dp_10"
        android:ellipsize="marquee"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:marqueeRepeatLimit="marquee_forever"
        android:paddingLeft="@dimen/dp_36"
        android:paddingTop="@dimen/dp_16"
        android:paddingRight="@dimen/dp_30"
        android:paddingBottom="@dimen/dp_16"
        android:shadowColor="#993D00"
        android:singleLine="true"
        android:text="找不到打印机编号，请联系打印机厂商客服"

        android:textColor="#993D00"
        android:textStyle="normal"
        app:layout_constraintTop_toBottomOf="@+id/TitleBar">

        <requestFocus />
    </TextView>

    <com.hjq.shape.layout.ShapeConstraintLayout
        android:id="@+id/lin3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="15dp"
        android:paddingHorizontal="15dp"
        android:paddingVertical="12dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_type"
        app:shape_radius="10dp"
        app:shape_solidColor="@color/white">

        <TextView
            android:id="@+id/txtPinPai"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="品牌"
            android:textColor="#777777"
            android:textSize="@dimen/sp_30"
            app:layout_constraintLeft_toLeftOf="parent" />

        <TextView
            android:id="@+id/txtPinPai2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="商米"
            android:textColor="#777777"
            android:textSize="@dimen/sp_30"
            app:layout_constraintRight_toRightOf="parent" />

        <View
            android:id="@+id/line1"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_marginTop="15dp"
            android:background="@color/home_F1F1F1"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtPinPai" />

        <TextView
            android:id="@+id/txtPrintName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="打印机名称"
            android:textColor="#777777"
            android:textSize="@dimen/sp_30"
            app:layout_constraintTop_toBottomOf="@+id/line1" />

        <com.meiling.common.view.ClearEditText
            android:maxLength="20"
            android:hint="输入打印机名称"
            android:id="@+id/editPrintName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:background="@null"
            android:gravity="right"
            android:textColor="#333333"
            android:text=""
            app:layout_constraintBaseline_toBaselineOf="@+id/txtPrintName"
            app:layout_constraintLeft_toRightOf="@+id/txtPrintName"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/line1" />

        <View
            android:id="@+id/line2"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_marginTop="15dp"
            android:background="@color/home_F1F1F1"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtPrintName" />

        <TextView
            android:id="@+id/txtShopName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="关联发货门店"
            android:textColor="#777777"
            android:textSize="@dimen/sp_30"
            app:layout_constraintTop_toBottomOf="@+id/line2" />

        <TextView
            android:id="@+id/selectShop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginRight="5dp"
            android:text="全部门店"
            android:textColor="#333333"
            android:textSize="@dimen/sp_30"
            app:layout_constraintRight_toLeftOf="@+id/selectShop2"
            app:layout_constraintTop_toBottomOf="@+id/line2" />

        <TextView
            android:id="@+id/selectShop2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text=">"
            android:textColor="#999999"
            android:textSize="16sp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/line2" />


    </com.hjq.shape.layout.ShapeConstraintLayout>


    <com.hjq.shape.layout.ShapeConstraintLayout
        android:id="@+id/lin4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="15dp"
        android:paddingHorizontal="15dp"
        android:paddingVertical="12dp"
        app:layout_constraintTop_toBottomOf="@+id/lin3"
        app:shape_radius="10dp"
        app:shape_solidColor="@color/white">

        <TextView
            android:id="@+id/txtPrintNo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="打印机编号"
            android:textColor="#777777"
            android:textSize="@dimen/sp_30"
            app:layout_constraintBaseline_toBaselineOf="@+id/edtPrintNo"
            app:layout_constraintLeft_toLeftOf="parent" />

        <EditText
            android:layout_marginLeft="@dimen/dp_20"
            android:id="@+id/edtPrintNo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:background="@null"
            android:gravity="right"
            android:hint="请输入终端编号/SN号"
            android:textColorHint="#FF999999"
            android:textSize="@dimen/sp_30"
            app:layout_constraintBottom_toBottomOf="@+id/scanLin"
            app:layout_constraintLeft_toRightOf="@+id/txtPrintNo"
            app:layout_constraintRight_toLeftOf="@+id/scanLin"
            app:layout_constraintTop_toTopOf="@+id/scanLin"
            />

        <com.hjq.shape.layout.ShapeConstraintLayout
            android:id="@+id/scanLin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingHorizontal="10dp"
            android:paddingVertical="5dp"
            app:layout_constraintRight_toRightOf="parent"
            app:shape_radius="10dp"
            app:shape_solidColor="@color/white"
            app:shape_strokeColor="@color/red"
            app:shape_strokeWidth="1dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="扫码识别"
                android:textColor="@color/red"
                android:textSize="@dimen/sp_24"
                android:textStyle="bold" />
        </com.hjq.shape.layout.ShapeConstraintLayout>


        <View
            android:id="@+id/line3"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_marginTop="15dp"
            android:background="@color/home_F1F1F1"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/edtPrintNo" />


        <TextView
            android:id="@+id/txtPrintWidth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="小票宽度"
            android:textColor="#777777"
            android:textSize="@dimen/sp_30"
            app:layout_constraintTop_toBottomOf="@+id/line3" />

        <TextView
            android:id="@+id/txtPrintWidth2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginRight="5dp"
            android:text="58mm"
            android:textColor="#333333"
            android:textSize="@dimen/sp_30"
            app:layout_constraintRight_toLeftOf="@+id/txtPrintWidth3"
            app:layout_constraintTop_toBottomOf="@+id/line3" />

        <TextView
            android:id="@+id/txtPrintWidth3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text=">"
            android:textColor="#999999"
            android:textSize="16sp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/line3" />

        <View
            android:id="@+id/line4"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_marginTop="15dp"
            android:background="@color/home_F1F1F1"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtPrintWidth" />

        <TextView
            android:id="@+id/txtPrintPageNum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="打印张数"
            android:textColor="#777777"
            android:textSize="@dimen/sp_30"
            app:layout_constraintTop_toBottomOf="@+id/line4" />

        <ImageView
            android:id="@+id/imgReduce"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/print_page_reduce"
            app:layout_constraintRight_toLeftOf="@+id/txtPrintPageNum2"
            app:layout_constraintTop_toBottomOf="@+id/line4" />

        <TextView
            android:gravity="center"
            android:minWidth="30dp"
            android:id="@+id/txtPrintPageNum2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:text="1"
            app:layout_constraintRight_toLeftOf="@+id/imgAdd"
            app:layout_constraintTop_toBottomOf="@+id/line4" />

        <ImageView
            android:id="@+id/imgAdd"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="5dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/line4" />

    </com.hjq.shape.layout.ShapeConstraintLayout>
    <com.hjq.shape.layout.ShapeLinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="@dimen/dp_20"
        android:paddingHorizontal="15dp"
        app:layout_constraintTop_toBottomOf="@+id/lin4"
        app:shape_radius="10dp"
        app:shape_solidColor="@color/white"
        android:layout_height="wrap_content">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:paddingVertical="@dimen/dp_20"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintBottom_toBottomOf="@+id/checkPrintAuto"
                app:layout_constraintTop_toTopOf="@+id/checkPrintAuto"
                android:id="@+id/txtPrintAuto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="接单自动打印小票"
                android:textColor="#333333"
                android:textSize="@dimen/sp_30"
                />


            <com.meiling.common.view.SwitchButton
                android:checked="true"
                android:id="@+id/checkPrintAuto"
                android:layout_width="@dimen/dp_100"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintRight_toRightOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>
        <View
            android:id="@+id/line5"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/home_F1F1F1"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/checkPrintAuto"
            />
        <androidx.constraintlayout.widget.ConstraintLayout
            android:paddingVertical="@dimen/dp_20"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="@+id/checkRefundAuto"
                app:layout_constraintBottom_toBottomOf="@+id/checkRefundAuto"
                android:id="@+id/txtRefundPrintAuto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="退款自动打印小票"
                android:textColor="#333333"
                android:textSize="@dimen/sp_30"
                />

            <com.meiling.common.view.SwitchButton
                android:checked="true"
                android:id="@+id/checkRefundAuto"
                android:layout_width="@dimen/dp_100"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintRight_toRightOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>
        <View
            android:id="@+id/line6"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/home_F1F1F1"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            />
        <androidx.constraintlayout.widget.ConstraintLayout
            android:paddingVertical="@dimen/dp_20"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="@+id/checkChangeOrderPrintAuto"
                app:layout_constraintBottom_toBottomOf="@+id/checkChangeOrderPrintAuto"
                android:id="@+id/txtChangeOrderPrintAuto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="订单修改自动打印小票"
                android:textColor="#333333"
                android:textSize="@dimen/sp_30"
                />

            <com.meiling.common.view.SwitchButton
                android:id="@+id/checkChangeOrderPrintAuto"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBaseline_toBottomOf="parent"
                android:layout_width="@dimen/dp_100"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.hjq.shape.layout.ShapeLinearLayout>





    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnLogin"
        android:layout_width="0dp"
        android:layout_height="@dimen/dp_90"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="@dimen/dp_80"
        android:layout_marginBottom="20dp"
        android:background="@drawable/login_btn_selector"
        android:enabled="true"
        android:text="保存"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_36"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>