<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="400dp"
    android:background="@drawable/scan_bg_input">

    <TextView
        android:id="@+id/txt_title_item_city"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:text="授权发货门店"
        android:textColor="@color/home_333333"
        android:textSize="@dimen/sp_32"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iv_close_select_shop_city"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/txt_title_item_city"
        android:layout_alignBottom="@+id/txt_title_item_city"
        android:layout_alignParentEnd="true"
        android:paddingHorizontal="@dimen/dp_20"
        android:src="@drawable/icon_close_x_balck"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/txt_title_item_city" />

    <TextView
        android:id="@+id/txt_select_shop_or_city"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/ll_select_all"
        android:layout_alignBottom="@+id/ll_select_all"
        android:layout_marginHorizontal="@dimen/dp_20"
        android:gravity="center_vertical"
        android:text="已选择4个门店"
        android:textColor="#ff333333"
        android:textSize="@dimen/sp_32" />

    <LinearLayout
        android:id="@+id/ll_select_all"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_title_item_city"
        android:layout_alignParentEnd="true"
        android:layout_marginHorizontal="@dimen/dp_20"
        android:layout_marginVertical="@dimen/dp_20">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginHorizontal="@dimen/dp_20"
            android:gravity="center_vertical"
            android:text="全部"
            android:textColor="#ff333333"
            android:textSize="@dimen/sp_32" />

        <ImageView
            android:id="@+id/img_select_all"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_checkbox_false"
            android:text="已选择4个门店" />
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_shop_or_city"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btn_ok_select_shop_city"
        android:layout_below="@+id/ll_select_all"
        android:layout_centerInParent="true"
        android:layout_marginHorizontal="@dimen/dp_20"
        android:background="@color/white"
        android:orientation="vertical"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        tools:listitem="@layout/item_dialog_account_select_city_or_shop">

    </androidx.recyclerview.widget.RecyclerView>

    <com.hjq.shape.view.ShapeButton
        android:id="@+id/btn_ok_select_shop_city"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_80"
        android:layout_alignParentBottom="true"
        android:layout_gravity="center"
        android:layout_marginStart="@dimen/dp_20"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="@dimen/dp_20"
        android:layout_marginBottom="10dp"
        android:layout_weight="1"
        android:gravity="center"
        android:shadowColor="@color/home_666666"
        android:text="确认"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_25"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:shape_radius="@dimen/dp_50"
        app:shape_solidColor="@color/red" />


</RelativeLayout>