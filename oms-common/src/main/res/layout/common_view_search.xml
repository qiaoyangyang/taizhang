<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1E2020"
    android:orientation="horizontal">


    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/ll_goods"
        android:layout_width="@dimen/dp_0"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="horizontal">


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/atv_goods"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="综合"
            android:textColor="#fff9c930"
            android:textSize="@dimen/sp_28" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/aiv_goods"
            android:layout_width="@dimen/dp_15"
            android:layout_height="@dimen/dp_10"
            android:layout_marginStart="@dimen/dp_10"
            android:src="@mipmap/icon_select_lower"></androidx.appcompat.widget.AppCompatImageView>

    </androidx.appcompat.widget.LinearLayoutCompat>


    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/ll_price"
        android:layout_width="@dimen/dp_0"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/atv_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="价格"
            android:textColor="#9B9B9B"
            android:textSize="@dimen/sp_28" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/aiv_price"
            android:layout_width="@dimen/dp_15"
            android:layout_height="@dimen/dp_10"
            android:layout_marginStart="@dimen/dp_10"
            android:src="@mipmap/icon_select_up"></androidx.appcompat.widget.AppCompatImageView>


    </androidx.appcompat.widget.LinearLayoutCompat>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/ll_time"
        android:layout_width="@dimen/dp_0"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/atv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="时间"
            android:textColor="#9B9B9B"
            android:textSize="@dimen/sp_28" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/aiv_time"
            android:layout_width="@dimen/dp_15"
            android:layout_height="@dimen/dp_10"
            android:layout_marginStart="@dimen/dp_10"
            android:src="@mipmap/icon_select_up"></androidx.appcompat.widget.AppCompatImageView>


    </androidx.appcompat.widget.LinearLayoutCompat>

</androidx.appcompat.widget.LinearLayoutCompat>